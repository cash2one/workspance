#set($layout="/layout/zhushou.vm")
#set($row="yuming")
#parse("/common/zhushou/head.vm")
<div class="wrapper">
	<form id="form2" action="doEditDomain.htm" method="post">
		<div class="domain-info">
			#if(${result}==1)
				<p>修改成功！</p>
			#elseif(${result}==2)
				<p>修改失败！</p>
			#end
			<em>
				##您旺铺的域名是：cather.kl91.com
				您旺铺的域名是：<span class="yel">#if($!{company.domain}&&$!{company.domain.length()}>0) $!{company.domain}#else $!{company.account}#end.kl91.com</span>
			</em>
			#if(!($!{company.domain}&&$!{company.domain.length()}>0))
				<p>
					<label for="">修改我的个性域名：</label>
					<input type="text" name="domain" class="field" /> .kl91.com 域名只能由数字和字母组成，不能多于20位！
				</p>
				<p>
					<label for=""></label>
					<input type="submit" value="保存" class="btn_s3" />
					<span class="brown">注意：域名只能修改一次，确认后，不得修改！</span>
				</p>
			#end
		</div>
		<input type="hidden" name="id" value="$!{company.id}" />
	</form>
</div>
#parse("/common/login/footer.vm")
