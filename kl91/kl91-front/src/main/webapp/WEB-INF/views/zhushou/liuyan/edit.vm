#set($layout="/layout/zhushou.vm")
#parse("/common/zhushou/head.vm")
<div class="wrapper mt">
	<div class="mid-wrap">
		<div class="wt">留言信息—<span>$!{inquiry.title}</span>
		</div>
		<div class="wc">
			<p>留言内容：$!{inquiry.content}</p>
			<p>发件人：$!{company.account}</p>
			<p>发件人公司：$!{company.companyName}</p>
			<p>地址：$!{company.address}</p>
			<p>手机：$!{company.mobile}</p>
		</div>
		<div class="wt">回复留言</div>
		<div class="wc">
			<form id="form1" action="doEdit.htm" method="post">
				<p style="height:auto">
					<label for="content">
						<span class="red">*</span>主要内容：
					</label>
					<textarea name="content" id="content">$!{inquiry.contentReply}</textarea>
				</p>
				<p style="height:auto">
					<input type="submit" name="" value="回复留言" class="btn_s3" />
					<input type="hidden" name="id" value="$!{inquiry.id}"/>
				</p>
			</form>
		</div>
	</div>
</div>
#parse("/common/footer.vm")
<script>
	kl91.util.tabs("J-tab","click", false);
</script>
<script src="$!{address.img}/kl91/js/kl91.myrc.js"></script>