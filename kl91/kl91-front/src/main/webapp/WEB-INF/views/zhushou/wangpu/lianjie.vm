#set($layout="/layout/zhushou.vm")
#set($row="lianjie")
#parse("/common/zhushou/head.vm")
<div class="wrapper domain-wrap">
	#if(${result}==1)
		<p>添加成功！</p>
	#elseif(${result}==2)
		<p>添加失败！</p>
	#elseif(${result}==3)
		<p>删除成功！</p>
	#elseif(${result}==4)
		<p>删除失败！</p>
	#end
	<form id="form2" action="createFriendLink.htm" method="post">
		#if(5>$list.size())
			<section>
				<label for="" class="t">您的友情链接：</label>
				<input type="text" name="name" placeholder="链接名称" class="field" />
				<input type="text" name="url" placeholder="链接地址" style="width: 250px" class="field" value="http://" />
				<a href="#" class="add" id="addlink"><s></s>添加</a>
			</section>
		#end
		<input type="hidden" name="cid" value="$!{cid}" />
	</form>
	<section>
		<table class="item-table">
			<tbody>
				<tr>
					<td width="210">链接名称</td>
					<td width="360">链接地址</td>
					<td>操作</td>
				</tr>
				#foreach($obj in $list)
				<tr>
					<td width="210">
						$!{obj.name}
					</td>
					<td width="360">
						$!{obj.url}
					</td>
					<td>
						<a href="doDeleteById.htm?id=$!{obj.id}">删除</a>
						##<a href="">编辑</a>
					</td>
				</tr>
				#end
			</tbody>
		</table>
	</section>
	<section>
		<div class="tip">
			<h4><s></s>提示：</h4>
			<div style="float: left">
				<p>1. 友情链接最多可以放置5条。</p>
				<p>2. 友情链接每一条字数不超过10个字。</p>
				<p>3. 按照添加顺序放置友情链接，即不断往后添加。</p>
				<p>4. 删除友情链接时，后面一条提前，替代被删除的链接，以此类推。</p>
			</div>
		</div>
	</section>
</div>
#parse("/common/login/footer.vm")
<script type="text/javascript">
	kl91.util.tabs("J-tab","click", false);
	kl91.util.placeholder();
	
	jQuery(document).ready(function(){
		
		jQuery("#addlink").click(function(){
			jQuery("#form2").submit();
		});
		
	});
</script>
<script src="$!{address.img}/kl91/js/kl91.myrc.js"></script>
