#set($layout="/layout/zhushou.vm")
#set($row="mima")
#parse("/common/zhushou/head.vm")
<div class="wrapper mt">
	<div class="mid-wrap">
		<div class="wt">密码修改<span>(打<s class="red">*</s>为必填项)</span></div>
		#if(${result}==1)
			<p>修改成功！</p>
		#elseif(${result}==3)
			<p>修改失败！</p>
		#elseif(${result}==2)
			<p>原密码输入错误！</p>
		#end
		<form id="form2" action="doChangePwd.htm" method="post">
			<div class="wc">
				<p>
					<label for=""><span class="red">*</span>原密码：</label>
					<input type="password" name="opwd" class="field validate[required,custom[password]]"/>
				</p>
				<p>
					<label for=""><span class="red">*</span>新密码：</label>
					<input type="password" name="pwd" id="pwd" class="field validate[required,custom[password]]"/>
				</p>
				<p>
					<label for=""><span class="red">*</span>确认密码：</label>
					<input type="password" name="repwd" class="field validate[required,equals[pwd]]" />
				</p>
				<p>
					<input type="submit" value="保存" class="btn_s3"/>
				</p>
			</div>
			<input type="hidden" name="id" value="$!{id}" />
		</form>
	</div>
</div>
#parse("/common/login/footer.vm")
#parse("/common/importValidator.vm")
<script type="text/javascript">
	kl91.util.tabs("J-tab","click", false);
	var reg = new kl91.reg.Validate("form2");
</script>
