#set($layout="/layout/zhushou.vm")
<script type="text/javascript" >
	jQuery(document).ready(function(){
		jQuery(".btn_s3").button();
		jQuery("#form1").submit(function(){
			jQuery("#btn_s3").button("option", "disabled", true);
		});
	});
	
</script>
#if($!{error} && $!{error}!="")
<div class="error">
	您的图片没有被上传!
	<br />
	$!{error}
</div>
#end
<div id="submitProcess"></div>
<div>
	<form id="form1" method="post" action="#springUrl('/sys/upload/doProduct.htm')" enctype="multipart/form-data">
		请选择图片图片
		<br>
		<input type="file" name="uploadfile" id="uploadfile" />
		<br>
		给图片设置个名称:
		<br>
		<input type="text" name="name" id="name" value="$!{name}"/>
		<br>
		<input type="submit" id="submitBtn" class="submitBtn" value="上传"/>
		<input type="hidden" value="$!{destUrl}" name="destUrl"/>
		<input type="hidden" value="$!{id}" name="id"/>
		<br>
		<br>
		<font color="#FF6600">提示：</font>支持.jpg,.jpeg,.gif,.bmp,.png格式的图片，图片的大小不超过2M，建议使用jpg格式的图片
	</form>
	
</div>