<div class="top">
	<div class="wrapper clearfix">
		<form action="$!{address.front}/doLogin.htm" id="doLogin" method="post" >
			<fieldset class="login-field">
				#if($!{sessionUser})
					<div >##class="login-info"
					<span>欢迎您，<b style="color:red">$!{sessionUser.account}</b> </span>
					<a href="$!{address.front}/logout.htm">退出</a>
					</div>
				#else
					<legend>会员登录</legend>
					<label for="">会员名</label>
					<input type="text" class="field" name="username" />
					<label for="">密码</label>
					<input type="password" class="field" name="psw" />
					<input type="submit" value="会员登录" class="login-btn"  />
					<a href="$!{address.front}/register/registerStep1.htm" title="免费注册">免费注册</a>
					<input type="hidden" name="url" value="" id="doUrl" />
				#end
			</fieldset>
		</form>
		<ul class="top-link">
			<li><a href="$!{address.front}/index.htm" target="_blank">塑料网首页</a></li>
			<li><a href="#">塑料服务</a></li>
			<li><a href="$!{address.zhushou}/index.htm">生意助手</a></li>
		</ul>
		<form action="" method="">
			<fieldset class="search-field">
				<legend>全站搜索</legend>
				<input type="text" class="field s-field" />
				<input type="submit" value="搜全站" class="btn_s" />
			</fieldset>
		</form>	
	</div>
</div>
<script type="text/javascript">
	jQuery(document).ready(function(){
		jQuery("#doLogin").submit(function(){
			jQuery("#doUrl").attr("value",window.location);
		});
	});
</script>