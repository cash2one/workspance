<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap
	PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
	"http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="creditFile">
	<typeAlias alias="creditFile" type="com.kl91.domain.company.CreditFile" />
	<typeAlias alias="creditFileDto" type="com.kl91.domain.dto.company.CreditFileSearchDto" />

	<resultMap class="creditFile" id="resultCreditFile">
		<result property="id" column="id" />
		<result property="cid" column="cid" />
		<result property="fileType" column="file_type" />
		<result property="fileName" column="file_name" />
		<result property="fileAgency" column="file_agency" />
		<result property="filePicUrl" column="file_pic_url" />
		<result property="showFlag" column="show_flag" />
		<result property="gmtStart" column="gmt_start" />
		<result property="gmtEnd" column="gmt_end" />
		<result property="gmtCreated" column="gmt_created" />
		<result property="gmtModified" column="gmt_modified" />
	</resultMap>

	<sql id="all_column">
		id,
		cid,
		file_type,
		file_name,
		file_agency,
		file_pic_url,
		show_flag,
		gmt_start,
		gmt_end,
		gmt_modified,
		gmt_created
	</sql>

	<insert id="insert" parameterClass="creditFile">
		INSERT INTO credit_file
		(cid,file_type,file_name,file_agency,file_pic_url,
		show_flag,gmt_start,gmt_end,gmt_modified,gmt_created)
		VALUES
		(#cid#,#fileType#,#fileName#,#fileAgency#,#filePicUrl#,
		#showFlag#,#gmtStart#,#gmtEnd#,#gmtModified#,#gmtCreated#)
		<selectKey keyProperty="id" resultClass="java.lang.Integer">
			SELECT
			LAST_INSERT_ID()
		</selectKey>
	</insert>


	<update id="update" parameterClass="creditFile">
		UPDATE credit_file
		SET
		cid =
		#cid#,
		file_type = #fileType#,
		file_name = #fileName#,
		file_agency =
		#fileAgency#,
		file_pic_url = #filePicUrl#,
		show_flag = #showFlag#,
		gmt_start = #gmtStart#,
		gmt_end = #gmtEnd#,
		gmt_modified = now()
		where
		id=#id#
	</update>

	<delete id="delete" parameterClass="java.lang.Integer">
		DELETE FROM credit_file
		WHERE
		id = #id#
	</delete>

	<select id="queryById" parameterClass="java.lang.Integer" resultMap="resultCreditFile">
		select
		<include refid="all_column" />
		from credit_file
		where id=#id#
	</select>
	
	<sql id="where_clause">
		<dynamic prepend="where">
			<isNotNull property="searchDto.cid" prepend="and">
				cid = #searchDto.cid#
			</isNotNull>
		</dynamic>
	</sql>
	
	<select id="queryFile" parameterClass="java.util.Map" resultMap="resultCreditFile">
		select 
		<include refid="all_column" />
		from credit_file 
	</select>
	
</sqlMap>
