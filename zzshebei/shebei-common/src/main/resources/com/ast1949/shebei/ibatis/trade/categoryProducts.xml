<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="categoryProducts">
	<typeAlias alias="categoryProducts" type="com.ast1949.shebei.domain.CategoryProducts" />

	<resultMap class="categoryProducts" id="resultAllProducts">
		<result property="id" column="id" />
		<result property="code" column="code" />
		<result property="label" column="label" />
		<result property="tags" column="tags" />
	</resultMap>

	<sql id="sqlAllProcuts">
		id,
		code,
		label,
		tags
	</sql>

	<select id="queryAllCategorys" resultMap="resultAllProducts" parameterClass="java.util.Map">
		select
		<include refid="sqlAllProcuts" />
		from category_products
		<dynamic prepend="where">
			<isEqual prepend="and" property="flag" compareValue="0">
				code like
				concat(#code#, '____')
			</isEqual>
			<isEqual prepend="and" property="flag" compareValue="1">
				code like
				concat(#code#, '____%') and leaf = 1
			</isEqual>
			<isEqual prepend="and" property="flag" compareValue="2">
				code like
				concat(#code#, '____%')
			</isEqual>
		</dynamic>
	</select>
	
	<select id="queryCtypeByCode" resultMap="resultAllProducts" parameterClass="java.util.Map">
		select 
		<include refid="sqlAllProcuts" />
		from category_products
		<dynamic prepend="where">
		<isNotEmpty property="code" prepend="and">
		code = #code#
		</isNotEmpty>
		</dynamic>
	</select>
</sqlMap>