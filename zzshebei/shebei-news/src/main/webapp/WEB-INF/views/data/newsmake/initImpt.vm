#set($layout="/layout/impt.vm")
<style>
	.imptContent {padding:20px;}
	.required {font-weight:bold;color:red;}
	.btn {font-size:18px; font-weight:bold;color:red;}
</style>

<div class="imptContent">
<h3 >ZZ91(资讯/报价)信息导入</h3>
	<h4>Excel Index</h4>
<form action="#springUrl('/data/newsmake/impt.htm')" enctype="multipart/form-data" method="post" >
	<table border="0" cellpadding="2">
		<tr>
			<th>字段</th>
			<th>excel列（起始0）</th>
			<th>参考列</th>
		</tr>
		<tr>
			<td colspan="4"><hr /></td>
		</tr>
		<tr>
			<td class="required">类别选择</td>
			<td colspan="3">
				<select name="categoryCode">
					<option value="" selected>请选择</option>
					#foreach($l in $list)
        			<option value="$!{l.categoryCode}">${l.name}</option>
					#end
        		</select>
			</td>
		</tr>
		<tr>
			<td colspan="4"><hr /></td>
		</tr>
		<tr>
			<td>标题</td>
			<td><input type="text" value="" name="title"/></td>
		</tr>
		<tr>
			<td>文章导读</td>
			<td><input type="text" value="" name="description"/></td>
		</tr>
		<tr>
			<td class="required">报价/资讯</td>
			<td colspan="3">
				<select name="type">
        			<option value="0" selected>资讯</option>
        			<option value="1">报价</option>
        		</select>
			</td>
		</tr>
		<tr>
			<td>详细信息</td>
			<td><input type="text" value="" name="details"/></td>
		</tr>
		<tr>
			<td>信息来源</td>
			<td><input type="text" value="" name="source"/></td>
			<td></td>
		</tr>
		<tr>
			<td>来源地址</td>
			<td><input type="text" value="" name="sourceUrl"/></td>
			<td></td>
		</tr>
		<tr>
			<td>标签(关键字)</td>
			<td><input type="text" value="" name="tags"/></td>
		</tr>
		#*
		<tr>
			<td>图片地址</td>
			<td><input type="text" value="" name="photoCover"/></td>
		</tr>
		*#
		<tr>
			<td>作者</td>
			<td><input type="text" value="" name="auth"/></td>
		</tr>
		<tr>
			<td>发布日期</td>
			<td><input type="text" value="" name="gmtPublish"/></td>
			<td>格式:xxxx-xx-xx或xx年xx月xx日</td>
		</tr>
		<tr>
			<td colspan="4"><hr /></td>
		</tr>
		#*<tr>
			<td>文件路径</td>
			<td><input type="text" value="xx.xls" name="fileName"/></td>
			<td>格式:必须是以.xls为后缀名的Excel文件</td>
		</tr>
		*#
	</table>
    <h4 >Excel文件</h4>
	<div>
		<input type="file" name="excel" />
	</div>
	<br/>
	<div><input type="submit" id="imptbtn" name="importexcel" value="填写正确，一定要要填写正确（否则会有怪兽哦），然后猛击这里！！！" class="btn" /></div>
</form>
</div>
