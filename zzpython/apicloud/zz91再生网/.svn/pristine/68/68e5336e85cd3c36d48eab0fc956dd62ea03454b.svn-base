.hot-title{
	padding: 23px 8px 14px;
	border-bottom: 1px solid #e1e1e1
}
.hot-title h4{
	float: left;
	padding-left: 5px;
	border-left: 3px solid #ea5f64;
	line-height: 12px;
	font-size: 14px;
}
.freshen{
	float: right;
	font-size: 12px;
	line-height: 14px;
	color: #959595;
	position: relative;
}
.freshen-img{
	width: 16px;
	height: 14px;
	background-image: url(../image/imageslist.png);
	background-position: -101px -168px;
	background-size: 250px;
	display: block;
	position: absolute;
	top: 0px;
	left: -14px;
}
.buy-in{
	border-bottom:1px solid #e1e1e1;
}
.buy-in li{
	float: left;
	width: 33.33%;
	padding: 8px 8px;
	text-align: center;
}
.buy-in li:nth-child(2){
	border-right:1px solid #e1e1e1;
	border-left:1px solid #e1e1e1
}
.buy-in li img{
	width: 100%;
	height: 80px;
}
.buy-name{
	font-size: 12px;
	line-height: 16px;
}
.mome-img{
	height: 5px;
	left: -18px;
	top: 3px;
	background-position: -88px -198px;
}
.belt-list li{
	width: 50%;
	text-align: center;
	height: 41px;
	line-height: 41px;
	border-bottom: 1px solid #e1e1e1;
	float: left;
	font-size: 12px;
	border-right: 1px solid #e1e1e1;
}
.belt-list li:nth-child(2),.belt-list li:nth-child(4){
	border-right: 0
}
.btn-div{
	padding: 10px 8px;
}
.btn{
	
	height: 30px;
	background-color: #01ba2e;
	text-align: center;
	line-height: 30px;
	font-size: 14px;
	color: #ffffff;
	display: block;
	border-radius: 5px;
}