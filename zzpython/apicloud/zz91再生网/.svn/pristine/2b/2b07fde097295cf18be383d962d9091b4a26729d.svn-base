	<script type="text/javascript">
		function xztradecode(typename,typecode){
			$(".trade_code").html(typename);
			$("#trade_code").val(typecode);
		}
		var photoBrowser;
		apiready = function() {
			photoBrowser = api.require('photoBrowser');
			//供求类别
			$(".trade_code").on("click", function() {
				openwindows("trade-code", '../trade/category.html')
			});
			
			//删除添加的图片
			$(".cp-name2").on("click", ".aui-icon-move", function() {
				$(this).parent().fadeOut(function() {
					$(this).remove();
				})
			})
			//浏览图片
			var imagesList = [];
			$(".handle").on("click", "img", function() {
				api.execScript({
					name : api.winName,
					script : "keybackFun('0')"
				});
				imagesList = []
				var activeIndex=0;
				var thp=$(this).attr("title");
				//获取图片地址
				$.each($('.img-kuang img'), function(i, item) {
					imagesList.push(item.src);
					if (item.title.toString()==thp.toString()){
						activeIndex=i;
					}
				});
				photoBrowser.open({
					images : imagesList,
					activeIndex : activeIndex,
					bgColor : '#000'
				}, function(ret) {
					if (ret.eventType == 'click') {
						closepicture();
					}
				});
			});
			//弹出上传图片
			var pnum=0;
			$(".handle-add").on("click", function() {
				api.actionSheet({
					cancelTitle : '取消',
					buttons : ['拍照', '从手机相册选择'],
				}, function(ret, err) {
					if (ret.buttonIndex == 1) {
						var photobj = {
							sourceType : 'camera'
						}
						api.pageDown({
							'bottom' : true //是否滚动，为false时说明当前页面已经到达底部了
						});
						getphoto(photobj);
					}
					if (ret.buttonIndex == 2) {
						var photobj = {
							sourceType : 'album'
						}
						getphoto(photobj);
						//getphotolist(photobj);
					}
				});
			});
			//拍照
			function getphoto(obj) {
				var thisBtn = $(".handle-add");
				api.getPicture({
					sourceType : obj.sourceType,
					allowEdit : false,
					quality : 70,
					targetWidth : 600,
					targetHeight : 600,
					saveToPhotoAlbum : false
				}, function(ret, err) {
					//alert(JSON.stringify(ret))
					if (ret) {
						var file = [];
						file[0] = ret.data;
						if (ret.data != "") {
							var imginfo = "";
							$.each(file, function(i, item) {
								imginfo += '<span class="img-kuang" title="'+pnum.toString()+'">' + '<img src="' + item + '" title="'+pnum.toString()+'" width="100%" height="100%">' + '<i class="delt-img aui-iconfont aui-icon-move"></i>' + '</span>'
							});
							pnum+=1;
							thisBtn.before(imginfo)
						}
					} else {
						api.toast({
							msg : '系统错误,请重试2',
							duration : 2000,
							location : 'bottom'
						});
					}
				});
			}
			var postflag=true;
			//点击发布
			$(".handle-into").on("click", function() {
			
				var title = $(".title-input input").val();
				var content = $(".text-area textarea").val()
				if (title == "") {
					hint("您的标题还没填写！");
					return;
				}
				if (content == "") {
					hint("您的回复内容还没填写！");
					return;
				}
				api.showProgress({
					title : "发布中...",
					modal : true
				});
				var bbs_post_reply_id = 0;
				if (api.pageParam.tocompany_id) {
					bbs_post_reply_id = api.pageParam.bbs_post_reply_id
				}
				var data = {
					company_id : UserInfo.memberID(),
					usertoken : UserInfo.token(),
					appsystem : api.systemType,
					datatype : "json",
					title : title,
					content : content,
					bbs_post_id : api.pageParam.bbs_post_id,
					tocompany_id : api.pageParam.tocompany_id,
					bbs_post_reply_id : bbs_post_reply_id,
					source : 'bbs_post_reply'
				}
				//alert(JSON.stringify(data));
				//获取图片地址
				$.each($('.img-kuang img'), function(i, item) {
					imagesList.push(item.src)
				});
				//alert(JSON.stringify(imagesList));
				if (postflag==true){
					postflag=false;
					api.ajax({
						url : hosturl + 'huzhu_replay/',
						method : 'post',
						timeout : 30,
						dataType : 'json',
						returnAll : false,
						data : {
							values : data,
							files : {
								"file" : imagesList
							}
						}
					}, function(ret, err) {
						if (ret) {
							if (ret.err == "false") {
								api.alert({
									title : '回复信息',
									msg : "回复成功",
									buttons : ['确定']
								}, function(ret, err) {
								});
								api.closeWin();
							} else {
								api.alert({
									title : '回复信息',
									msg : ret.errkey,
									buttons : ['确定']
								}, function(ret, err) {
								})
							}
						} else {
							api.toast({
								msg : '系统错误，请重试',
								duration : 2000,
								location : 'bottom'
							});
						};
						postflag=true;
						api.hideProgress();
					});
				}
			})
		}
		//关闭图片
		function closepicture() {
			photoBrowser.close();
			api.execScript({
				name : api.winName,
				script : "keybackFun('1')"
			});
		}

		function hint(ts) {
			$(".hint").remove()
			var hintHtml = '<div class="hint" style="position:fixed;color:#fff;line-height:18px;font-size:14px;width:100%">' + '<span style="display:block;margin:0 8px;background:#000;opacity:0.8;border-radius:5px;padding:10px 10px;text-align:center">' + ts + '<span>' + '</div>';
			$("body").append(hintHtml);
			var hint_height = $(".hint").height();
			var wd_height = $(window).height();
			var top_height = (wd_height - hint_height) / 2
			$(".hint").css("top", top_height + "px");
			setTimeout(function() {
				$(".hint").fadeOut("slow", function() {
					$(".hint").remove()
				})
			}, 2000)
		}
	</script>
