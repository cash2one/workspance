<script type="text/javascript">
apiready = function(){
    $(".btn-one").on("click",function(){
        var pageParam = {
            wintitle:"我的再生钱包",
            type:"call-moery",
        };
        openWin("call-moery","../myrc/call-moery.html",pageParam);
    })
    $(".btn-two").on("click",function(){
        var pageParam = {
            wintitle:"我的账单",
            type:"burse-bill",
        };
        openWin("burse-bill","../myrc/burse-bill.html",pageParam);
    })
    //如何赚钱
	$(".howzq").on("click", function() {
		var pageParam = {
			wintitle : "如何赚钱?",
			type : "get-moery"
		};
		openWin("get-moery", "../comm/get-moery.html", pageParam);
	})
	//显示联系方式
	$(".showcontact").on("click", function() {
		var html = "";
		html += '<p style="color: #000000;">仅需5元即可全网显示本账号所有供求信息联系方式，并在供求列表页标注显示联系方式，电话量瞬间翻倍。</p>'
		//html += '<p style="color:#C4C4C4;margin-top:10px">如虚假信息、虚假号码等可举报申请退款</p>'
		$aui.alert({
			title : '提示',
			content : html,
			buttons : ['取消','显示'],
			radius : 10,
			titleColor : '#333',
			contColor : '#333',
			btnColor : ''
		}, function(ret) {
			if (ret == 1) {
				showcontact();
			}
		})
	})
    api.showProgress({title:'加载中',modal:false});
    ajaxInfo();
}
function showcontact(){
	var html = "";
		html += '<p style="color: #000000;">您想购买显示联系方式时间为</p>'
		html += '<div class="showradio50">'
	    html += '<ul>'
	    html += '<li><input class="aui-radio" type="radio" name="report" id="report1" value="1" /><label class="aui-radio-name" for=report1>5元/天</label></li>'
	    html += '<li><input class="aui-radio" type="radio" name="report" id="report2" value="2" checked /><label class="aui-radio-name" for=report2>25元/周</label></li>'
	    html += '<li><input class="aui-radio" type="radio" name="report" id="report3" value="3" /><label class="aui-radio-name" for=report3>120元/月</label></li>'
	    html += '<li><input class="aui-radio" type="radio" name="report" id="report4" value="4" /><label class="aui-radio-name" for=report4>1200元/年</label></li>'
	    html += '</li>'
	    html += '</div>'
	$aui.alert({
		title : '',
		content : html,
		buttons : ['取消','确定'],
		radius : 10,
		titleColor : '#333',
		contColor : '#333',
		btnColor : ''
	}, function(ret) {
		if (ret == 1) {
			
		}
	})
}
function ajaxInfo(){
	var company_id =  UserInfo.memberID();
	var usertoken = UserInfo.token();
	
	api.ajax({
	    url : hosturl + 'qianbao/?company_id='+ company_id +'&usertoken='+ usertoken +'&appsystem='+ api.systemType +'&datatype=json&t='+(new Date()).getTime().toString(),
	    method : 'get',
	    timeout : 30,
	    dataType : 'json',
	    returnAll : false
	}, function(ret, err) {
	    if (ret) {
	    	// alert(JSON.stringify(ret))
	    	$(".j_outfeeall").text(ret.outfeeall);
	    	$(".j_outfeeyd").text(ret.outfeeyd);
	    	$(".j_infeeall").text(ret.infeeall);
	    	$(".j_blance").text(ret.blance);
	    	$(".j_infeeyd").text(ret.infeeyd);
	        api.hideProgress();
	    } else {
	    	api.hideProgress();
	    };
	});
}
</script>
