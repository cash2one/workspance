<script type="text/javascript">
apiready = function () {
  //改变字体大小
  $(".small-size").on("click",function(){
    $(".info-table").animate({fontSize:"12px",lineHeight:"24px"});
  })
  $(".big-size").on("click",function(){
      $(".info-table").animate({fontSize:"18px",lineHeight:"32px"});
  })
  $(".take").on("click",function(){
    var pageParam = {
      wintitle:"订阅报价",
      type:"take-price"
    };
    openWin("take-price","../price/take-price.html",pageParam);
  })
  $(".supply").on("click","li",function(){
    var id = $(this).attr("id")
    var pageParam = {
          wintitle:"供求详情",
          type:"infomation-heart",
          id:id,
          nav_list:[{"typename": "供求详情", "id": 1}, {"typename": "公司简介", "id": 2}], //头部划动标题
          frame_url:["../trade/firm-detail.html","../trade/firm.html"], //打开frame组的页面集合
          topnumber:2,
          bounces:false
        };
    openWin("infomation-heart","infomation-heart.html",pageParam);
  })
  //获取信息
  ajaxInfo();
  $(".price-list").on("click","li",function(){
    var id = $(this).attr("id");
    var pageParam = {
        wintitle:"报价详情",
        type:"price-detail",
        id:id
      };
      openWin("price-detail"+id,"../price/price-detail.html",pageParam);
  })
}
function ajaxInfo(){
  api.showProgress({title:'加载中',modal:false});
  var id = api.pageParam.id;
  api.ajax({
      url : hosturl + 'priceviews/?id='+ id +'&datatype=json',
      method : 'get',
      timeout : 30,
      dataType : 'json',
      returnAll : false
  }, function(ret, err) {
      if (ret) {
        $(".essay-title").html(ret.listall[0].title);
        $(".essay-time").html(ret.listall[0].gmt_created);
        $(".info-table").html(ret.listall[0].content); 
        var pageHtml = "";
        if(ret.priceabout.length == 0){
          $(".interfix_1").hide();
        }
        $.each(ret.priceabout, function(index, item) {
            var getTpl = $api.html($api.byId("info-list"));
            laytpl(getTpl).render(item, function(html) {
                pageHtml = pageHtml + html;
            });
        })
        if(ret.offerlist.length == 0){
          $(".interfix_2").hide();
        }
         var gqHtml = "";
        $.each(ret.offerlist, function(index, item) {
          if(item.proimg == null){
            item.proimg = "";
            item.display = "none"
          }
            var getTpl = $api.html($api.byId("info-list-gq"));
            laytpl(getTpl).render(item, function(html) {
                gqHtml = gqHtml + html;
            });
        })
        $(".price-list").html(pageHtml);
        $(".supply").html(gqHtml)
        api.hideProgress();
      } else {
      };
  });
}
</script>
