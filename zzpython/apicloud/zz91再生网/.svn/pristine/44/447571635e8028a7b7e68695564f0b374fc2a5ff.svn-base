  <!doctype html>
<html>
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
	<title>互助社区发布</title>
	<link rel="stylesheet" type="text/css" href="../../css/api.css"/>
	<link rel="stylesheet" type="text/css" href="../../css/common.css"/>
	<style>
	.type-into{
		padding: 10px 0px;
		display: -webkit-box;
  		display: -webkit-flex;
  		display: flex;
  		-webkit-box-orient: horizontal;
  		-webkit-flex-flow: row;
        flex-flow: row;
	}
	.type-into  label{
		-webkit-box-flex: 1; 
    	-webkit-flex: 1;
            	flex: 1;
            	text-align:center;
	}
	.type-into  label input{
		margin-right: 5px;
	}
	.title-input{
		padding-top: 22px;
		margin:0 8px;
		border-bottom: 1px solid #e1e1e1
	}
	.title-input input{
		line-height: normal;
		width: 100%;
		line-height: 25px;
	}
	.text-area{
		margin: 0px 8px;
		font-size: 12px;
		border-bottom: 1px solid #e1e1e1
	}
	.text-area textarea{
		width: 100%;
		height: 130px;
		font-size: 12px;
	}
	.handle{
		padding: 30px 8px 0px;
	}
	.handle-add{
		border: 1px dashed #e1e1e1;
		width: 23px;
		height: 23px;
		background: url(../../image/imageslist.png);
		background-size: 320px;
		background-position: -110px -234px;
	}
	.handle-into{
		width: 60px;
		height: 25px;
		background-color: #01ba2e;
		color: #ffffff;
		position: relative;
		padding-left: 24px;
		float: right
	}
	.handle-into i{
		position: absolute;
		height: 20px;
		width: 20px;
		background: url(../../image/imageslist.png);
		background-size: 320px;
		background-position: -110px -214px;
		left: 3px
	}
	</style>
</head>
<body>
	<div class="title-input">
		<input type="text" placeholder="标题">
	</div>
	<div class="text-area">
		<textarea  placeholder="内容"></textarea>
	</div>
	<div class="handle">
		<span class="handle-add"></span>
		<span class="handle-into" tapmode="hover-category"><i></i>回复</span>
	</div>
</body>
<script type="text/javascript" src="../../script/api.js"></script>
<script type="text/javascript" src="../../script/jquery.js"></script>
<script type="text/javascript" src="../../script/zepto.min.js"></script>
<script type="text/javascript" src="../../script/common.js"></script>
<script type="text/javascript">
	apiready = function(){
		$(".handle-into").on("click",function(){
			var title = $(".title-input input").val();
			var content = $(".text-area textarea").val()
			if(title==""){
				hint("您的标题还没填写！");
				return;
			}
			if(content==""){
				hint("您的回复内容还没填写！");
				return;
			}
			var bbs_post_reply_id = 0;
			if(api.pageParam.tocompany_id){
				bbs_post_reply_id = api.pageParam.bbs_post_reply_id
			}
			
			var data = {
				company_id:UserInfo.memberID(),
				usertoken:UserInfo.token(),
				appsystem:api.systemType,
				datatype:"json",
				title:title,
				content:content,
				bbs_post_id:api.pageParam.bbs_post_id,
				tocompany_id:api.pageParam.tocompany_id,
				bbs_post_reply_id:bbs_post_reply_id
			}
			api.ajax({
				url : hosturl + 'huzhu_replay/',
				method : 'post',
				timeout : 30,
				dataType : 'json',
				returnAll : false,
				data:{
      				values: data
    			}
			}, function(ret, err) {
				if (ret) {
					if(ret.err=="false"){
						api.alert({
        					title: '回复信息',
       		 				msg: "回复成功",
        					buttons:['确定']
    					},function(ret,err){
    					})
					}else{
						api.alert({
        					title: '回复信息',
       		 				msg: ret.errkey,
        					buttons:['确定']
    					},function(ret,err){
    					})
					}
				} else {
				};
			});
		})
	}
	function  hint(ts){
		  $(".hint").remove()
		  var hintHtml = '<div class="hint" style="position:fixed;color:#fff;line-height:18px;font-size:14px;width:100%">'
		  +'<span style="display:block;margin:0 8px;background:#000;opacity:0.8;border-radius:5px;padding:10px 10px;text-align:center">'+ts+'<span>'
		  +'</div>';
		  $("body").append(hintHtml);
		  var hint_height =$(".hint").height();
		  var wd_height =$(window).height();
		  var top_height = (wd_height - hint_height)/2
		  $(".hint").css("top",top_height+"px");
		  setTimeout(function(){
		    $(".hint").fadeOut("slow",function(){
		      $(".hint").remove()
		    })
		  },2000)
	}
</script>
</html>