.surplus{
	display: table;
	width: 100%;
	border-bottom: 1px solid #e1e1e1
}
.surplus-td{
	display: table-cell;
	vertical-align: middle;
	height: 150px;
	text-align: center;
	color: #03a9f4;
}
.surplus-moery{
	font-size: 30px;
	margin-top: 23px;
}
.old-buy{
	border-bottom: 1px solid #e1e1e1;
	margin-top: 10px
}
.day-but{
	float: left;
	width: 50%;
	border-right: 1px solid #e1e1e1;
	padding-left: 8px;
	padding-bottom: 8px
}
.mouth-buy{
	float: left;
	width: 50%;
	padding-left: 8px;
	padding-bottom: 8px
}
.old-buy-tg{
	font-size: 12px;
	color: #959595
}
.old-buy-moery{
	font-size: 15px;
}
.buy-list span{
	float: left;
	width: 50%;
	padding-left: 8px;
	color: #03a9f4;
	font-size: 12px;
	margin: 10px 0
}
.btn{
	margin: 0px 8px;
	height: 30px;
	line-height: 30px;
	text-align: center;
	color: #fff;
	background:#03a9f4;
	border-radius: 5px;
}