<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <title>Hello APP</title>
    <link rel="stylesheet" type="text/css" href="./css/api.css" />
    <link rel="stylesheet" type="text/css" href="./css/common.css" />
    <link rel="stylesheet" type="text/css" href="./css/aui.css" />
</head>
<body>
    <header class="aui-bar aui-bar-nav aui-bar-warning" id="aui-header">
        <a class="aui-btn aui-btn-warning aui-pull-left">
            <span class="aui-iconfont aui-icon-location"></span>
        </a>
        <a class="aui-btn aui-btn-warning active aui-pull-left">
            <span class="aui-iconfont aui-icon-camera"></span>
        </a>
        <a class="aui-iconfont aui-icon-menu aui-pull-right"></a>
        <div class="aui-title">首页</div>
    </header>
    <footer class="aui-nav aui-bar-tab" id="aui-footer">
        <div class="aui-col-xs-3 aui-text-center active">
            <span class="aui-iconfont aui-icon-favor"></span>
            <p>动态</p>
        </div>
        <div class="aui-col-xs-3 aui-text-center">
            <span class="aui-iconfont aui-icon-mark"></span>
            <p>活动</p>
        </div>
        <div class="aui-col-xs-3 aui-text-center">
            <span class="aui-iconfont aui-icon-like"></span>
            <p>圈子</p>
        </div>
        <div class="aui-col-xs-3 aui-text-center">
            <span class="aui-iconfont aui-icon-my"></span>
            <p>我的</p>
        </div>
    </footer>
</body>
<script type="text/javascript" src="./script/api.js"></script>
<script type="text/javascript">
    apiready = function(){

        var header = $api.byId('aui-header');
        $api.fixStatusBar(header); 
        var headerPos = $api.offset(header);
        var footer_h = $api.offset($api.byId('aui-footer')).h;
        var body_h = $api.offset($api.dom('body')).h;

        api.openFrame({
            name: 'main',
            url: 'html/main.html',
            bounces: true,
            rect: {
                x: 0,
                y: headerPos.h,
                w: headerPos.w,
                h: body_h - headerPos.h - footer_h
            }
        });
    };
</script>
</html>