				        api.alert({msg:'error'});
				    }
				});
				*/
				var pageParam = {
					wintitle : "我的名片",
					type : "vcard",
					bounces : false
				};
				if (UserInfo.has_login()) {
					openWin("vcard", "../myrc/vcard.html", pageParam);
				} else {
					pageParam.nextUrl = "../myrc/vcard.html";
					pageParam.winName = "vcard";
