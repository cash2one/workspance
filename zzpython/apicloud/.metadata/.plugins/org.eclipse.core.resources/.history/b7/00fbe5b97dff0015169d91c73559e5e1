		function isLogin() {
			var login_sn = UserInfo.has_login();
			if (login_sn) {
				var contact = UserInfo.contactName();
				//$(".my-name").text("您好，" + contact + "！")
			} else {
				//$(".my-name").text("请登录")
			}
		}

		//签到
		function qiandao() {
			var data = {
				company_id : UserInfo.memberID(),
			}
			api.ajax({
				url : hosturl + 'qianbao/qiandao.html?datatype=json',
				method : 'get',
				timeout : 30,
				dataType : 'json',
				returnAll : false,
				data : {
					values : data
				}
			}, function(ret, err) {
				if (ret) {
					if (ret.err == "false") {
						api.toast({
							msg : '签到成功！再生钱包  + 0.5元',
							duration : 2000,
							location : 'middle'
						});
						$(".qiandaobtn").hide();
						$(".haveqiandao").show();
					} else {
						api.toast({
							msg : '你今天已经签到',
							duration : 2000,
							location : 'middle'
						});
					}
					$api.rmStorage("indexdata");
				} else {
					api.toast({
						msg : '系统错误',
						duration : 2000,
						location : 'middle'
					});
				};
			});
		}
