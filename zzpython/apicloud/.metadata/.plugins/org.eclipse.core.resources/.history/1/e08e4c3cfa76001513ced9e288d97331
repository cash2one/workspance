<script>
var city_list ={}
apiready = function(){
  //选择类型
  $(".j_type").on("click",function(){
    var pageParam = {
          wintitle:"发布需求",
          type:"need-type",
      };
      openWin("need-type","../trade/need-type.html",pageParam);
  })
  //选择城市
  $(".j_city").on("click",function(){
     var pageParam = {
        wintitle:"地区列表",
        type:"ulcitylist",
      };
      openWin("ulcitylist","../trade/ulcitylist.html",pageParam);
  })
  //删除地区
  $(".get-xinx").on("click",".remove",function(){
    var spanFt = $(this).parent()
    spanFt.hide(300,function(){
      spanFt.remove()
    })
  });
  // var city_list ={
  //     "city": "天津",
  //      "id": 120001,
  //      "pinyin": "tianjin"
  // }
  // intoCity(city_list);
}
function intoCity(city_info){
  if(city_list[city_info.id]){
    alert("您选择的城市已添加");
    return;
  }
  city_list[city_info.id] = city_info;
  // alert(JSON.stringify(city_info))
  var city_span = '<span>'+city_info.city+'<i class="remove"></i></span>';
  $(".city-list").append(city_span);

}
</script>
