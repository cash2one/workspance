        <div id="wrap">
            <div id="main">
                <br>
                <dl>
                    <dt><h2>配置加载指示标签</h2></dt>
                    <dd>
                        <label>加载标签的背景色值：</label><br>
                        <textarea id="buttonBgcolor"></textarea><br>
                        <label>加载标签的活跃色值：</label><br>
                        <textarea id="buttonlightcolor"></textarea><br>
                        <label>加载标签的中心坐标：</label><br>
                        <textarea id="menux"></textarea><br>
                        <label>加载标签的中心坐标：</label><br>
                        <textarea id="menuy"></textarea><br>
                        <p>
                        <button tapmode="active" onclick="objOpenGraph()"class="btn" id="openTimeSelector">打开</button>
                        </p>
                        <p>
                        <button tapmode="active" onclick="objShowGraph()"class="btn" id="openTimeSelector">开始</button>
                        </p>
                        <p>
                        <button tapmode="active" onclick="objHiddenGraph()"class="btn" id="openTimeSelector">停止</button>
                        </p>
                        <p>
                        <button tapmode="active" onclick="objCloseGraph()"class="btn" id="objCloseGraph">关闭</button>
                        </p>
                    </dd>
