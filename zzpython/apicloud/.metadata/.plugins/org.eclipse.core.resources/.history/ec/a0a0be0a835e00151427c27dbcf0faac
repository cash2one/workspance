    <script type='text/javascript' src='../script/api.js'></script>
    <script type='text/javascript'>
    function showProgress(){
        var style = $api.byId('style');
        style = $api.val(style);
        var type = $api.byId('type');
        type = $api.val(type);
        api.showProgress({
            style: style,
            animationType: type,
            title: '努力加载中...',
            text: '先喝杯茶...',
            modal: false
        });

        setTimeout(function(){
            api.hideProgress();
        }, 2000);
    }
    </script>
