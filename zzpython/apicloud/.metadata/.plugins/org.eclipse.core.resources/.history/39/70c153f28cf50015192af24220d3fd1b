	<script type="text/javascript" src="../../script/api.js"></script>
	<script type="text/javascript" src="../../script/zepto.min.js"></script>
	<script type="text/javascript" src="../../script/common.js"></script>
	<script type="text/javascript" src="../../script/laytpl.js"></script>
	<script type="text/javascript">
		var currPage = 1;
		var big_category, small_category;
		var nowurl = "";
		var searchdata;
		apiready = function() {
			big_category = api.pageParam.big_category;
			small_category = api.pageParam.small_category;
			if (big_category) {
				nowurl = nowurl + big_category + "/"
			}
			if (small_category) {
				nowurl = nowurl + small_category + ".html"
			}
			ajaxInfo();
		}
		var dataload = true;
		function ajaxInfo() {
			if (dataload == true) {
				dataload = false;
			}
			searchdata = {};
			api.ajax({
				url : hosturl + 'ye/' + nowurl + '?page=' + currPage ,
				method : 'get',
				timeout : 30,
				dataType : 'json',
				returnAll : false,
				data : {
					values : searchdata
				}
			}, function(ret, err) {
				if (ret) {
					var pageHtml = "";
					var yelist = ret.list;
					$.each(yelist, function(index, item) {
						if (item.phone_rate == 0 || item.phone_rate == null) {
							item.phone_display = "none"
						} else {
							item.phone_display = ""
						}
						var getTpl = $api.html($api.byId("info-list"));
						laytpl(getTpl).render(item, function(html) {
							pageHtml = pageHtml + html;
						});
					})
				}
			})
		}

		function loadMore(objdiv) {
			self = objdiv
			var pageobj = document.getElementById("pageindex");
			var page = pageobj.value;
			pageobj.value = parseInt(page) + 1
			self.innerHTML = "加载中...";
			$.get("/ye/ye_more/", {
				page : pageobj.value,
				industry : "{{industry}}",
			}, function(data, status) {
				if (status == "success" && data != "err\n" && data != "") {
					self.style.display = "block";
					$("#ok").append(data);
					self.innerHTML = "点击后加载更多内容";
				} else {
					self.style.display = "none";
					alert('no');
				}
			});
		};
	</script>
