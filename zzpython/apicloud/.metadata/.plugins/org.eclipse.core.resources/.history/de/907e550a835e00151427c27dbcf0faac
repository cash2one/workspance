<script type="text/javascript">

apiready = function() {
    var array = new Array();
    for (var i = 0; i < 10; i++) {
        array[i] = "widget://res/scrollPicture_04.jpg";
    }
    var iaf = api.require('coverFlow');
    iaf.open({
        x: 0,
        y: 104,
        width: api.winWidth,
        height: api.winHeight-200,
        backGroundColor: '#333333',
        paths: array
    }, function(ret, err) {
        $api.byId("indexSeclect").innerText = ret.index;
    });
}

