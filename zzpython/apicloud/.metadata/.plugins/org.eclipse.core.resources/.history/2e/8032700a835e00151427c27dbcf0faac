        function objOpenGraph(){
            var obj = api.require('graph');
            obj.open({
                 x: document.getElementById("viewx").value,
                 y:document.getElementById("viewy").value,
                 width:document.getElementById("vieww").value,
                 height:document.getElementById("viewh").value,
                 bgColor:document.getElementById("colorForBackground").value,
                 coordColor:document.getElementById("colorForCoordinate").value,
                 markColor:document.getElementById("colorForMarks").value,
                 lineColor:document.getElementById("colorForLines").value,
                 bubbleUp:document.getElementById("upPath").value,
                 bubbleDown:document.getElementById("downPath").value,
                 data:array
             },function(ret,err){
                 document.getElementById("scrolleOrient").value = ret.orient;
             });
        };
        function objReloadGraph(){
            var obj = api.require('graph');
            var array = new Array();
            array = [{
                     "time": "12:05",
                     "data": "35",
                     "isonline": "1"
                     },
                     {
                     "time": "13:10",
                     "data": "45",
                     "isonline": "1"
                     },
                     {
                     "time": "34:22",
                     "data": "55",
                     "isonline": "1"
                     },
                     {
                     "time": "45:08",
                     "data": "60",
                     "isonline": "1"
                     },
                     {
                     "time": "16:19",
                     "data": "35",
                     "isonline": "1"
                     },
                     {
                     "time": "17:31",
                     "data": "5",
                     "isonline": "0"
                     },
                     {
                     "time": "12:05",
                     "data": "15",
                     "isonline": "1"
                     },
                     {
                     "time": "13:10",
                     "data": "45",
                     "isonline": "1"
                     },
                     {
                     "time": "14:22",
                     "data": "65",
                     "isonline": "1"
                     },
                     {
