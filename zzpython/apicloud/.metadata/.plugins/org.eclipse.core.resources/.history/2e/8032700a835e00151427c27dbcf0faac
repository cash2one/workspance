                     "data": "47",
                     "isonline": "1"
                     },
                     {
                     "time": "17:31",
                     "data": "19",
                     "isonline": "1"
                     }];
                     obj.reload({
                                type:document.getElementById("refreshDataType").value,
                                data:array
                     });
        };
        function objCloseGraph(){
            var obj = api.require('graph');
            obj.close();
        };   
