    <script type='text/javascript'>

	function openAliPay() {
	    var iaf = api.require('aliPay');
	    var subject = document.getElementById("title").value;
	    var body = document.getElementById("subtitle").value;
	    var amount = document.getElementById("price").value;
	    var tradeNO = document.getElementById("ordernum").value;
	    var notifyURL = document.getElementById("notifyURL").value;
	    iaf.pay({
	        partner: '2088501785358190',
	        seller: '2088501785358190',
	        rsaPriKey: '',
	        rsaPubKey: 'MIGfMA0GCSqGSIb3DQEBAQUAA4GNADCBiQKBgQDDeA6uhvZKMMWcPHXAl3+/h8rFhkbCgXmdQd9Ntlm8Q17pwwZx850WYBFc39cUImqxxs9Mi1EJLjRV/e6qU0Rp6CpbkR3s52Og93oYjv3GoVQ4lAWPtyICvoHYFelN8jntDcjKmsq3DW2kn21r52nXzjPuEX7H+Ud1Q7bEMaLx4wIDAQAB',
	        subject: subject,
	        body: body,
	        amount: amount,
	        tradeNO: tradeNO,
	        notifyURL: notifyURL
	    }, function(ret, err) {
	        document.getElementById("pay_message").value = ret.statusMessage;
	        document.getElementById("pay_code").value = ret.statusCode;
	        api.alert({
	            title: '支付结果',
	            msg: ret.statusMessage,
	            buttons: ['确定']
	        });
	    });
	};
    </script>
