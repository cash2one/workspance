    <script type="text/javascript">
        function openPage1(){
            api.openWin({
                name: 'page1',
                url: './page1.html',
                pageParam: {name: '111'},
                bounces: true,
                opaque: false,
                bgColor: '#fff'
            });
        }

        function exec(){
            api.alert({msg:'index发来贺电'});
        }
        function execScript(){
            api.execScript({
                script: 'exec();'
            });
        }
        apiready = function(){
            var header = $api.byId('header');
            $api.fixIos7Bar(header);
        };
    </script>
