	<body>
			
		<!--新闻列表-->
		<div class="newslist">
			
		</div>
		<div class="jzmore" style="border: 0;">
			更多新闻加载中...
		</div>
		<script type="text/javascript" src="../script/api.js"></script>
		<script type="text/javascript" src="../script/zepto.min.js"></script>
		<script type="text/javascript" src="../script/iscroll.js"></script>
		<script type="text/javascript" src="../script/swipe.min.js"></script>
		<script>
			function sliding() {
				api.openSlidPane({
					type : 'left'
				});
			}
			var currPage = 1;
			var stoploading = false;
			var typeid="";
			
			apiready = function() {
				//$api.fixIos7Bar($api.dom('.title'));
				api.addEventListener({
					name : 'keyback'
				}, function(ret, err) {
					api.closeWidget();
				});
				
				api.addEventListener({
				    name:'scrolltobottom'
				},function(ret,err){
				    loadmorelist('http://app.zjfriend.com/sex/list.html',currPage+1);
				});
				
				api.showProgress();
				api.ajax({
					url : 'http://app.zjfriend.com/sex/list.html',
					method : 'get',
					timeout : 30,
					data:{
				        values: {typeid:typeid.toString(),t : (new Date()).getTime().toString()}
				    },
					dataType : 'text',
					returnAll : false
				}, function(ret, err) {
					if (ret) {
						$(".newslist").html(ret);
						api.hideProgress();
					};
				});
			};
			function sstop(){
				api.pageUp(
				    function(ret){
				        if (!ret.scrolled){
				            
				        }else{
				        	sstop();
				        }
				    }
				);
			}
			function changesexmain(tid){
				typeid=tid;
				api.showProgress();
				api.ajax({
					url : 'http://app.zjfriend.com/sex/list.html?typeid='+typeid.toString()+'&t='+(new Date()).getTime().toString(),
					method : 'get',
					timeout : 30,
					data:{},
					dataType : 'text',
					returnAll : false
				}, function(ret, err) {
					if (ret) {
						$(".newslist").html(ret);
					}else{
						$(".newslist").html('暂无信息');
					}
					api.hideProgress();
					
					api.execScript({
		                name:'root',
		                script:'openMenu()'
		            })
				});
			}
			function toDetail(id) {
				var pageParam = {
					id : id,
					t : (new Date()).getTime().toString()
				};
				api.openWin({
					name : 'detail',
					pageParam : pageParam,
					url : 'newsDetail.html'
				})
			}
			function loadmorelist(url,page){
				if (stoploading == false) {
					stoploading = true;
					
					$(".jzmore").html("更多新闻加载中");
					api.ajax({
						url : 'http://app.zjfriend.com/sex/list.html?page='+page.toString()+'&typeid='+typeid.toString()+'&t='+(new Date()).getTime().toString(),
						method : 'get',
						timeout : 30,
						data:{},
						dataType : 'text',
						returnAll : false
					}, function(ret, err) {
						if (ret) {
							$(".newslist").append(ret);
							stoploading = false;
							currPage=page;
							api.hideProgress();
							$(".jzmore").html("点击加载更多信息");
						} else {
							stoploading = false;
						};
					});
				}
			}
		</script>
