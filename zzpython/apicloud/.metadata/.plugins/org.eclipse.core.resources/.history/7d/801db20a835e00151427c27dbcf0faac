    <script type="text/javascript">
        function closeToP1(){
            api.closeToWin({
                name: 'page1',
                animation: {
                    type: 'cube',
                    subType: 'from_top',
                    duration: 300
                }
            });
        }
        function openP1() {
            api.openWin({
                name: 'page1',
                url: './page1.html'
            });
        }
        apiready = function(){
            var header = $api.byId('header');
            $api.fixIos7Bar(header);
        };
