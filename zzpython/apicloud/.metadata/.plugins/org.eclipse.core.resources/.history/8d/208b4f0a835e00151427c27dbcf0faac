    <script type='text/javascript' src='../script/api.js'></script>
    <script type='text/javascript'>
    function closeCityList()
    {
        var iaf = api.require('cityList');
        iaf.close({ });
    }
    function openCityList()
    {
    var iaf = api.require('cityList');
    iaf.open({
             x:document.getElementById("cityx").value,
             y:document.getElementById("cityy").value,
             width:document.getElementById("citywidth").value,
             height:document.getElementById("cityheight").value,
             currentCity:document.getElementById("citycurrent").value,
             resource:document.getElementById("pathUrl").value
             },function(ret,err)
             {
                 if(ret.status)
             {
             // document.getElementById("cityid").innerHTML = ret.cityInfo.id;
             // document.getElementById("cityname").innerHTML = ret.cityInfo.city;
             // document.getElementById("citypinyin").innerHTML = ret.cityInfo.pinyin;
			 
             document.getElementById("cityid").value = ret.cityInfo.id;
             document.getElementById("cityname").value = ret.cityInfo.city;
             document.getElementById("citypinyin").value = ret.cityInfo.pinyin;
             }else
             {alert(err.msg);}
             });
    };
    </script>
