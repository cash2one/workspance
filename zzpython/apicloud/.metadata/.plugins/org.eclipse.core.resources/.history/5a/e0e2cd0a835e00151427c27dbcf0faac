    <script type="text/javascript" src="../script/api.js"></script>
    <script type="text/javascript">
        
function objOpenGraph(){
    var obj = api.require('sideMenu');
    var arrayPath = new Array();
    arrayPath[0]={icon:document.getElementById("button1Img").value,bgImg:document.getElementById("button1SelectedImg").value};
    arrayPath[1]={icon:document.getElementById("button2Img").value,bgImg:document.getElementById("button2SelectedImg").value};
    arrayPath[2]={icon:document.getElementById("button3Img").value,bgImg:document.getElementById("button3SelectedImg").value};
    arrayPath[3]={icon:document.getElementById("button4Img").value,bgImg:document.getElementById("button4SelectedImg").value};
    
    obj.open({
             type:document.getElementById("buttonType").value,
             startPosition:document.getElementById("buttonfromHeight").value,
             interval:document.getElementById("buttoninterval").value,
             btnHeight:document.getElementById("buttonHeight").value,
             trajectoryColor:document.getElementById("menuBackGroundColor").value,
             btnArray:arrayPath
     },function(ret,err){
             document.getElementById("sideMenuID").value = ret.id;
             document.getElementById("handlesideMenuID").value = ret.id;
             document.getElementById("hiddensideMenuID").value = ret.id;
             document.getElementById("closesideMenuID").value =ret.id;
             api.alert({msg:'点击了菜单id为'+ret.id+'的第'+ret.index+'个按钮'});
     });
};
    function objShowGraph(){
        var obj = api.require('sideMenu');
        obj.show({
               id:document.getElementById("handlesideMenuID").value
        });
    };
    function objHiddenGraph(){
        var obj = api.require('sideMenu');
        obj.hidden({
               id:document.getElementById("hiddensideMenuID").value
        });
    };
    function objCloseGraph(){
        var obj = api.require('sideMenu');
        obj.close({
               id:document.getElementById("closesideMenuID").value
        });
    };
    </script>
