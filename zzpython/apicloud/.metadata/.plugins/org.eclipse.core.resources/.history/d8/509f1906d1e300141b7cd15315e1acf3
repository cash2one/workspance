		<script>
			function sliding() {
				api.openSlidPane({
					type : 'left'
				});
			}

			apiready = function() {
				$api.fixIos7Bar($api.dom('.title'));
				api.addEventListener({
					name : 'keyback'
				}, function(ret, err) {
					api.closeWidget();
				});
				api.showProgress();
				api.ajax({
					url : 'http://app.zz91.com/sex/list.html',
					method : 'get',
					timeout : 30,
					pageParam:{t:(new Date()).getTime().toString()},
					dataType : 'text',
					returnAll : false
				}, function(ret, err) {
					if (ret) {
						$(".content").html(ret);
						api.hideProgress();
					} else {
						api.alert({
							msg : ('错误码：' + err.code + '；错误信息：' + err.msg + '网络状态码：' + err.statusCode)
						});
					};
				});
				
			};
			function toDetail(id) {
				var pageParam={id:id,t:(new Date()).getTime().toString()};
		        api.openWin({
		            name: 'detail',
		            pageParam:pageParam,
		            url: 'newsDetail.html'
		        })
		    }

		</script>
