<script type="text/javascript" src="../../script/api.js"></script>
<script type="text/javascript" src="../../script/zepto.min.js"></script>
<script type="text/javascript" src="../../script/jquery.js"></script>
<script type="text/javascript" src="../../script/common.js"></script>
<script type="text/javascript" src="../../script/laytpl.js"></script>
<script type="text/javascript">
	var currPage = 1;
	apiready = function() {
		ajaxInfo();
		//底部加载更多
		api.addEventListener({
			name : 'scrolltobottom'
		}, function(ret, err) {
			//如果底部没有加载更多提示，添加加载更多提示
			$(".la_more").html("加载更多中...");
			setTimeout(function() {
				ajaxInfo();
			}, 1000)
		});
		//页面刷新
		api.setRefreshHeaderInfo({
			visible : true,
			// bgColor: '#F2F2F2',
			bgColor : '#E6E6E6',
			textColor : '#000000',
			textDown : '下拉刷新',
			textUp : '释放刷新',
		}, function(ret, err) {
			currPage = 1;
			ajaxInfo();
			api.toast({
				msg : '数据已是最新！',
				duration : 3000,
				location : 'bottom'
			});
		});
	}
	var dataload = true;
	function ajaxInfo(){
		if (dataload == false) {
			return false;
		}
		dataload = false;
		var data={
			company_id : UserInfo.memberID(),
			usertoken : UserInfo.token(),
			appsystem : api.systemType,
			datatype : "json",
			page : currPage
		}
		api.ajax({
			url : hosturl +"myrc/my_addressbook.html",
			method : "get",
			timeout : 30,
			dataType : 'json',
			returnAll : false,
			data : {
				values : data
			}
		}, function(ret, err) {
			//alert( JSON.stringify( ret ) );
			if (ret){
				var pageHtml = "";
				$.each(ret.list, function(index, item) {
					var getTpl = $api.html($api.byId("info-list"));
					if (!item.faceurl){item.faceurl="../../image/noavatar.gif"}
					laytpl(getTpl).render(item, function(html) {
						pageHtml = pageHtml + html;
					});
				});
				if (currPage == 1) {
					if (pageHtml==""){
	            		$(".nodata").show();
	            		$(".la_more").hide();
	            	}else{
	            		$(".nodata").hide();
	            		$(".la_more").show();
	                }
	                $(".addressbooklist").html(pageHtml);
	            }else{
					$(".addressbooklist").append(pageHtml);
	            }
				api.pageUp({
					'top' : true
				});
				if (pageHtml!=""){
					currPage += 1;
					$(".la_more").html("上拉获取更多信息");
				}else{
					$(".la_more").html("全部加载完毕");
				}
				api.refreshHeaderLoadDone();
				api.hideProgress();
				dataload = true;
			}
		});
	}
</script>
</html>