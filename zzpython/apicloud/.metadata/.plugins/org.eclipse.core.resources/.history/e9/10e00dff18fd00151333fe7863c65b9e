	<script type="text/javascript">
		apiready = function() {
			api.readFile({
			    path: 'widget://res/province.json'
			}, function(ret, err){
			    if(ret.status){
			        var data = ret.data;
			        alert(data)
			    }
			});
			$(".my-face").on("click", function() {
				api.actionSheet({
					cancelTitle : '取消',
					buttons : ['拍照', '从手机相册选择'],
				}, function(ret, err) {
					if (ret.buttonIndex == 1) {
						var photobj = {
							sourceType : 'camera'
						}
						api.pageDown({
							'bottom' : true //是否滚动，为false时说明当前页面已经到达底部了
						});
						getphoto(photobj);
					}
					if (ret.buttonIndex == 2) {
						var photobj = {
							sourceType : 'album'
						}
						getphoto(photobj);
						//getphotolist(photobj);
					}
				});
			});
		}
	</script>
