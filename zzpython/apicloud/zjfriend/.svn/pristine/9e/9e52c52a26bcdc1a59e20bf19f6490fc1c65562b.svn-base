<!DOCTYPE html>
<html lang='zh-CN'>
    <head>
        <meta charset='utf-8'>
        <meta name='viewport' content='maximum-scale=1.0,minimum-scale=1.0,user-scalable=no,width=device-width,initial-scale=1.0'/>
        <link rel='stylesheet' type='text/css' href='../css/bootstrap.min.css' />
        <link rel='stylesheet' href='../css/github.css'>
		<style type='text/css'>
		  .diy-btn-group-test {margin : 10px 0px 0px 0px;}
          body{-webkit-user-select:none;}
		</style>
    </head>
    <body>
<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">UICalendar 是一个日历选择模块。</h3>
  </div>
  <div class="panel-body">
		<pre class="pre-scrollable">
var UICalendar = api.require('UICalendar');
UICalendar.open({
    rect: {
       // x: 10,
        y: 30
      //  w: 320,
      //  h: 220
    },
    styles: {
        bg: 'rgba(128,118,105,0.5)',
        week: {
            weekdayColor: 'rgba(255,255,0,0.5)',
            weekendColor: 'rgba(176,23,31,0.6)',
            size: 12
        },
        date: {
           color: 'rgba(0,255,255,0.8)',
           selectedColor: 'rgba(255,0,0,1)',
          // selectedBg: 'widget://res/3.png',
           size: 12
        },
        today: {
           color: 'rgb(230,46,37)'
          // bg: 'rgba(255,153,18,0.8)'
          // bg: 'widget://res/2.png'
        },
        specialDate: {
            color: '#ff0'
          //  bg: 'widget://res/1.png'
        }
    },
    specialDate: [{
        date: '2015-06-01'
    },{
        date: '2015-06-02'
    },{
        date: '2015-06-03'
    },{
        date: '2015-07-01'
    }],
    switchMode: 'horizontal',
    fixedOn: api.frameName,
    fixed: true
}, function(ret, err){
    alert(JSON.stringify(ret));
});
	</pre>
</div>
<div class="panel-footer">	
	<div class="btn-group btn-group-justified">
	  <div class="btn-group">
	    <button tapmode="" role="run" type="button" class="btn btn-primary">运行</button>
	  </div>	  
	  <div class="btn-group">
	    <button tapmode=""  role="edit" type="button" class="btn btn-info">编辑</button>
	  </div>
	  <div class="btn-group">
	    <button tapmode=""  role="restore" type="button" class="btn btn-warning">还原</button>
	  </div>
	</div>
</div>
</div>
    </body>
    <script src="../script/jquery-1.11.1.min.js"></script>
    <script src='../script/highlight.pack.js'></script>
    <script src='../script/demo2.js'></script>
</html>