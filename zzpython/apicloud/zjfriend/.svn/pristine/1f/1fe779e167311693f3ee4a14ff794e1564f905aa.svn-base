<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<title></title>
		<link rel="stylesheet" type="text/css" href="../css/mui.min.css"/>
		<link rel="stylesheet" href="../css/main.min.css" type="text/css">
		<link rel="stylesheet" href="../css/detail.css" type="text/css">
	</head>
	<body>
		<div class="box">
			<div id="detail"></div>
			<script id="info" type="text/html">
				<div class="news_content">
				<div class="news_t">{{ d.title }}</div>
				<div class="news_t1">
				<ul>
				<li>{{ d.click }}</li>
				<li>|</li>
				<li>{{ d.pubdate }}</li>
				</ul>
				</div>
				</div>
				<div id="content" class="cnewsinfo">
				{{ d.content }}
				</div>
			</script>
			<script type="text/javascript" src="../script/api.js"></script>
			<script type="text/javascript" src="../script/laytpl.js"></script>
			<script type="text/javascript" src="../script/jquery.js"></script>
			<script type="text/javascript" src="../script/zepto.min.js"></script>
			<script type="text/javascript" src="../script/jQuery.md5.js"></script>
			<script type="text/javascript" src="../script/common.js"></script>
			<script>
				function sliding() {
					api.openSlidPane({
						type : 'left'
					});
				}

				function openpinlun() {
					alert(api.pageParam.id)
					var pageParam = {
						aid : api.pageParam.id
					};
					openWin("newspinpun", "../html/my_pinlun.html", pageParam);
				}

				apiready = function() {
//					alert(1)
//					$api.fixIos7Bar($api.dom('.mui-action-back'));
					var id = api.pageParam.id;
					api.addEventListener({
						name : 'keyback'
					}, function(ret, err) {
						api.closeWin();
					});
					api.showProgress();			
					api.ajax({
						url : hosturl + '/sex/newsdetail' + id.toString() + '.html?' + 'pagetype=json&mid='+UserInfo.memberID(),
						method : 'get',
						timeout : 30,
						dataType : 'json',
						returnAll : false
					}, function(ret, err) {
						if (ret) {
							var gettpl = document.getElementById('info').innerHTML;
							laytpl(gettpl).render(ret.result[0], function(html) {
								document.getElementById('detail').innerHTML = html;
								api.hideProgress();
							});
						} else {
						};
					});
				};
			</script>
		</div>
		<!--<footer class="mui-bar mui-bar-tab" id="newsnav">
			<a tapmode="mui-active" id="defaultTab" class="mui-tab-item" href="javascript:shareSystem()"> <span class="mui-icon mui-icon-upload"></span> <span class="mui-tab-label">分享</span> </a>
			<a tapmode="mui-active" class="mui-tab-item" href="javascript:favorite('&content_id={{id}}&favorite_type_code=10091012&title={{content.title}}')"> <span class="mui-icon mui-icon-star"></span> <span class="mui-tab-label">收藏</span> </a>
			<a tapmode="mui-active" class="mui-tab-item" href="javascript:openpinlun()"> <span class="mui-icon mui-icon-chat"></span> <span class="mui-tab-label">评论</span> </a>
		</footer>-->
	</body>
</html>
