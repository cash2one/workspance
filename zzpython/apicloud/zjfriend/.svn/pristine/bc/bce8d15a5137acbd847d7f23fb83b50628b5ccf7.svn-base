<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<title></title>
<link rel="stylesheet" type="text/css" href="../css/mui.min.css"/>
<link rel="stylesheet" type="text/css" href="../css/my_fangkui.css"/>
<link rel="stylesheet" href="../css/my_pinlun.css" type="text/css">
<link rel="stylesheet" href="../css/main.min.css" type="text/css">
</head>
<body>
<center style="padding: 20px;margin-top:50px;">
<form id="fkform">
	<div style="text-align: left;">
		<font color="#929292">评论文章</font>
		<br />
	</div>
	<textarea rows="6" cols="20" name="content" id="content" style="height: 100px;color:#999999" placeholder="写评论....." class="textarea"></textarea>
	<!-- <input type="text" name="contact" id="contact" placeholder="手机或QQ" /> -->
	<div class="mui-btn mui-btn-blue" onclick="submitfrm()" style="width: 100%;">
		&nbsp;&nbsp;&nbsp;&nbsp;提交&nbsp;&nbsp;&nbsp;&nbsp;
	</div>
</form>
</center>
<div class="box">
<div id="MyComments" class="pinlun">

</div>
<div onclick="seeallreviews(416687)" class="pinlun_more bt1 bb1">查看全部<span id="span_reviewcount"></span>条评论</div>
</div>
<script id="info-list" type="text/html">
	<div class="plunxx">
		<div class="plunxx_top">
			<div class="plunxx_top1"> {{ d.feedbackname }}
				<span>台湾省</span>
			</div>
			<div class="plunxx_top3">
				<div title="这条评论有问题，小编快来和谐它" onclick="userReport(20289022,416687)" style="padding-right:0px;" class="plunxx_bottom_fdui"><span id="span_jubao_20289022" style="color:red;">举报</span>
				</div>
			</div>
		</div>

		<div class="plunxx_center">
			{{ d.msg }}
			<div style="clear: both"></div>
		</div>
		<div class="plunxx_bottom">
			<div class="plunxx_bottom_time"> 2015-4-19 12:48:32</div>
			<div onclick="ShowReply(20289022)" class="plunxx_bottom_fyan">回复</div>
			<div id="o_20289022" onclick="sndReq(416687,20289022,&#39;oppose&#39;,2)" class="plunxx_bottom_fdui">反对[{{ d.bad }}]</div>
			<div id="s_20289022" onclick="sndReq(416687,20289022,&#39;support&#39;,35)" class="plunxx_bottom_ztong">支持[{{ d.good }}]</div>
		</div>
		<div id="div_reply_20289022"></div>
	</div>
</script>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript" src="../script/zepto.min.js"></script>
<script type="text/javascript" src="../script/common.js"></script>
<script type="text/javascript" src="../script/laytpl.js"></script>
<script>
function pinlun(obj){
	$("#div_contentbg").css("display","none");
	obj.style.height="60px";
	$(".plun_bt_tj_button").css("display","block");
	document.getElementById("txtContent0").focus();
}
function submitfrm(){
	var aid = api.pageParam.id;
	var mid = UserInfo.memberID();
	var msg = $("#content").val();
	if(msg.length==0){
		alert("您还没有填写评论!");
		return
	}
	api.showProgress();
	api.ajax({
		url : hosturl+'/sex/insert_dede_feedback.html',
		method : 'post',
		timeout : 30,
		data : {
			values:{"aid":aid,"mid":mid,"msg":msg}
		},
		dataType : "json",
		returnAll : false
	}, function(ret, err) {
		if(ret){
			if (ret.error_code==0) {
				alert("评论成功!");
				changesexmain(aid);
			}
		}else {
				api.alert({msg:('错误码：'+err.code+'；错误信息：'+err.msg+'网络状态码：'+err.statusCode)});
		}
		api.hideProgress();
	})
}

var currPage = 1;
var stoploading = false;
function changesexmain(id) {
	api.showProgress();
	api.ajax({
		url : hosturl+'/sex/show_feedback.html?aid='+id,
		method : 'get',
		timeout : 30,
		data : {},
		dataType : "json",
		returnAll : false
	}, function(ret, err) {
		var pageHtml = "";
		if (ret) {
			$.each(ret.result,function(index,item){
				var getTpl = $api.html($api.byId("info-list"));
				laytpl(getTpl).render(item, function(html) {
					pageHtml = pageHtml + html;
				});
			})
			$("#MyComments").html(pageHtml);
			$("#span_reviewcount").html(ret.listcount)
		}
		else {
			$("#MyComments").html("<div style='width=100%;text-align:center;padding-top:20px;height:100%'>暂无信息</div>");
			$(".jzmore").css("display", "none");
			api.toast({
				msg : ('错误码：' + err.code + '；错误信息：' + err.msg + '网络状态码：' + err.statusCode),
				duration : 3000,
				location : 'bottom'
			});
		}
		api.hideProgress();
	})
};
apiready = function() {
	var id = api.pageParam.id;
	api.addEventListener({
		name : 'keyback'
	}, function(ret, err) {
		api.closeWidget();
	});
	api.addEventListener({
		name : 'scrolltobottom'
	}, function(ret, err) {
		loadmorelist(hosturl+'/sex/show_feedback.html?aid='+id, currPage + 1);
	});
	changesexmain(id);
	//下拉刷新
	// api.setRefreshHeaderInfo({
	// 	visible : true,
	// 	// bgColor: '#F2F2F2',
	// 	bgColor : '#E6E6E6',
	// 	textColor : '#000000',
	// 	textDown : '下拉刷新',
	// 	textUp : '释放刷新',
	// }, function(ret, err) {
	// 	changesexmain()
	// 	api.refreshHeaderLoadDone();
	// 	api.hideProgress();
	// 	api.toast({
	// 		msg : '数据已是最新！',
	// 		duration : 3000,
	// 		location : 'bottom'
	// 	});
	// });
}
function loadmorelist(url, page) {
	var id = api.pageParam.id;
	if (stoploading == false) {
		stoploading = true;
		$(".jzmore").html("更多加载中...");
		api.ajax({
			url : hosturl+'/sex/show_feedback.html?aid='+id,
			method : 'get',
			timeout : 30,
			data : {},
			dataType : "json",
			returnAll : false
		}, function(ret, err) {
			if (ret && ret != "") {
				var pageHtml = "";
				$.each(ret.result,function(index,item){
					var getTpl = $api.html($api.byId("info-list"));
					laytpl(getTpl).render(item, function(html) {
						pageHtml = pageHtml + html;
					});
				})
				$("#MyComments").append(pageHtml);
				stoploading = false;
				currPage = page;
				api.hideProgress();
				$(".jzmore").html("点击加载更多");
				} else {
					stoploading = false;
					$(".jzmore").css("display", "none");
				};
		});
	}
}
</script>
</body>
</html>