<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>zz91.crm.cs.index</title>
	#parse("/zz91/common/import.vm")
	#parse("/zz91/common/context.vm")
	<script type="text/javascript" src="$!{address.js}/admin/lib/ComboTree.js" ></script>
	<script type="text/javascript" src="$!{address.js}/crm/blacklist.js" ></script>

<script type="text/javascript">
	Ext.onReady(function() {
		
		#if($!{csMap})
			ast.ast1949.crm.company.CSMAP=$!{csMap};
		#end
		
		var grid = new ast.ast1949.crm.company.Grid({
    		region:"center",
    		layout:"fit",
			contextmenu:new Ext.menu.Menu({
				items:[
				#if($!{asignFlag}=="1")
				{
					text: '分配给',
					menu:[
					#foreach($cs in $!{allcs.keySet()})
					#if($velocityCount > 1),#end
					{
						text:"${allcs.get($!{cs})}",
						handler:function(){
							var rows=grid.getSelectionModel().getSelections();
							var oldassignArr=new Array();
							for(var i=0;i<rows.length;i++){
								oldassignArr.push({
									csAccount:rows[i].get("csAccount"),
									companyId:rows[i].get("id")
								})
							}
							ast.ast1949.crm.company.reassign(grid, oldassignArr, "${cs}", "$!{allcs.get($!{cs})}");
						}
					}
					#end
					]
				}
				#end
				]
			}),
			loadDefault:function(){
				var B=grid.getStore().baseParams;
				B["csAccount"]="$!{cs}";
				grid.getStore().baseParames=B;
				grid.getStore().reload();
			}
    	});
		
		grid.loadDefault();
		
		## 黑名单历史 grid
		var blacklistGrid = new ast.ast1949.crm.company.blacklistGrid({
			region:"south",
			title:"拉黑历史",
			height:200,
			split:true
		});
		
		##点击公司,弹出公司所有黑名单历史##
		grid.on("rowclick",function(g,rowIndex,e){
			var B=blacklistGrid.getStore().baseParams;
			B=B||{};
    		B["companyId"]=g.getStore().getAt(rowIndex).get("id");
    		blacklistGrid.getStore().baseParams=B;
    		blacklistGrid.getStore().reload({});
		});
		
    	var viewport = new Ext.Viewport({
    		layout : "border",
    		border : true,
    		items : [grid,blacklistGrid]
    	});
    
    	var form = new ast.ast1949.crm.company.SearchForm({
    		title:"搜索公司信息",
    		collapsible: true,
            animCollapse: false,
            frame:true,
            titleCollapse:true,
            style: 'position:absolute;right:6;bottom:30;z-index:101',  //left:0;
            height:300,
            width:270,
            targetGrid:grid
    	});
    
    	form.render(Ext.getBody());
    
    	form.resizer = new Ext.Resizable(form.el, {
            minHeight:50,
            minWidth:100,
            handles: "n",
            pinned: true,
            transparent:true,
            resizeElement : function(){
                var box = this.proxy.getBox();
                this.proxy.hide();
                form.setHeight(box.height);
                return box;
            }
        });
	});
</script>
</head>

<body>

</body>
</html>