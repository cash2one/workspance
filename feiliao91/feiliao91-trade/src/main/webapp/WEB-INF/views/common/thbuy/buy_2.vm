	function getNextDay(d,day){
        d = new Date(d);
        d = +d + 1000*60*60*24*day;
        d = new Date(d);
        //return d;
        //格式化
        return d.getFullYear()+"-"+(d.getMonth()+1)+"-"+d.getDate() +" "+ d.getHours() + ":" + d.getMinutes() +":" +d.getSeconds();
         
    }
