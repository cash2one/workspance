#set( $layout = "/layout/mypostLayout.vm" )
 <!--report_content2 start-->
              <div class="report_content2">
              	  <!--report_content2_1 start-->
                  <div class="report_content2_1">
                  	  <div class="report_content2_1_1 report_content2_1_1_a">
                        <span class="report_content2_color1">我回复的帖子</span>
                        <span class="report_content2_text2">所属类别</span>
                          <span class="report_content2_text3">回复时间</span>
                          <span class="report_content2_text4">状态</span>
                      </div>
                      
                      <div id="report_content2_1_2" class="report_content2_1_2">
                      	  <ul>
							#foreach($!reply in $!{page.records})
                          	  <li>
                              	  <span class="report_content2_li1">
                               	  <a href="#springUrl('/viewReply')$!{reply.id}.htm" target="_blank">
									#printTitle($!{reply.title} 22 "")
									</a> 
								  </span>
                                  <span class="report_content2_li2">
                                  <a href="#springUrl('/bbsCategory')$!{reply.bbsPostCategoryId}.htm" target="_blank">
									[$!categoryMap.get($!{reply.bbsPostCategoryId})]
								  </a></span>
                                  <span class="report_content2_li3" title="$!{date.format('yyyy-MM-dd HH:mm:ss', ${reply.gmtCreated})}">$!date.format('yyyy-MM-dd',${reply.gmtCreated})</span>
                                  <span class="report_content2_li4">#if($!{reply.checkStatus}==0)未审核#elseif($!{reply.checkStatus}==1)已审核#elseif($!{reply.checkStatus}==3)退回#end</span>
                            </li>
							#end
                          </ul>
                      </div>
                      <div style="clear:both"></div>
                      <div class="tips_content2">
							<div class="pages_my">
								#myreplyPageNav($page "#springUrl('/myreply.htm')" "" "")
							</div>
							<div style="clear:both"></div>
					  </div>
                </div>
				    
                  
                  <!--report_content2_1 end-->
                  <div style="clear:both"></div>
              </div>
