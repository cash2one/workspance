#set( $layout = "/layout/mypostLayout.vm" )
<!--report_content2 start-->
              <div class="report_content2">
              	  <!--report_content2_1 start-->
                  <div class="report_content2_1">
                  	  <div class="report_content2_1_1 report_content2_1_1_c">
                          <span class="report_content2_color1">我的留言消息</span>
                          <span class="report_content2_text2">留言类别</span>
                          <span class="report_content2_text3">留言时间</span>
                          <span class="report_content2_text4">状态</span>
                      </div>
                      
                      <div id="report_content2_1_2" class="report_content2_1_2">
                      	  <ul>
    							#foreach($!{bsSysMessageList} in $!{bsSysMessageList})
                              	  <li>
                                  	  <span class="report_content2_li1">
    									#if($!{bsSysMessageList.topic.length()}<=22)
                    						$!{bsSysMessageList.topic}
                    					#else
                						$!{bsSysMessageList.topic.substring(0,22)}
        								#end
    									</span>
                                      <span class="report_content2_li2">系统消息</span>
                                      <span class="report_content2_li3">$!{date.format('yyyy-MM-dd', $!{bsSysMessageList.massageTime})}</span>
                                      #if($!{bsSysMessageList.isRead}==0)
    									<span class="report_content2_li4">未读</span>
    								  #else
    									<span class="report_content2_li4">已读</span>
    								  #end
                                </li>
								#end
                          </ul>
                      </div>
                      <div style="clear:both"></div>
					  <div class="tips_content2">
							<div class="pages_my">
								#pageBar($totalPages $currentPage "")
                            </div>
                            <div style="clear:both"></div>
					  </div>               		
                </div>
                  
                  <!--report_content2_1 end-->
              </div>
              <!--conten2 end-->