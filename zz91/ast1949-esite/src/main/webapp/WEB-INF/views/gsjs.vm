<script>
jQuery(function(){
	Asto.util.imgSize();
	scroll();
	picShow();
});
function picShow() {
	var c = jQuery("#Js_show"),
		item = c.find("img"),
		num = item.length,
		cur = 0;
		if (num === 1) {
			return
		}
		item.each(function(i){
			if (i !== 0) {
				$(this).hide();
			}
		});
	var loop = setTimeout(fader, 2000);
	function fader() {
		var m = cur - 1 < 0 ? num - 1 : cur - 1;
		item.eq(m).fadeOut("slow");
		item.eq(cur).fadeIn("slow");
		cur = cur + 1 === num ? 0 : cur + 1;
		setTimeout(fader, 2000);
	}
}
function scroll() {
	var m = jQuery("#Js_marquee"),
		item = m.find(".honor_item"),
		c = m.find(".cont"),
		w = item.outerWidth(true),
		W = w * item.length;
	if (item.length > 740/w){
		var c2, left = 0;
		item2 = item.clone();
		item2.appendTo(c);
		c.css("width", W * 2);
		function move(){
			if (m.scrollLeft() > W) {
				m.scrollLeft(0);
			} else {
				left = m.scrollLeft() + 2;
				m.scrollLeft(left);
			}
			loop = setTimeout(move, 100);
		}
		var loop = setTimeout(move, 100);
		m.bind({
			"mouseover" : function(){
				clearTimeout(loop);
			},
			"mouseout" : function(){
				loop = setTimeout(move, 100);
			}
		})
	}
}
</script>