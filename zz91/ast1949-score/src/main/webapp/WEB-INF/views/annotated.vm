                    #set($vcount = 0)
                    #foreach($feedback in $!{page.records})
                        #set($userProfiler=$!{userProfilerMap.get($feedback.id)})
                        <li>
                            <div class="userpic">
                                #set($picFlag=0)
                                #if($userProfiler)
                                    #if(${userProfiler.picturePath} && ${userProfiler.picturePath}!="")
                                        <img src="$!{address.resource}/$!{userProfiler.picturePath}" />
                                        #set($picFlag=1)
                                    #end
                                #end
                                #if($picFlag==0)
                                    <img src="$!{address.images}/bbs/noimage.gif" />
                                #end
                            </div>
                            <div class="userinfo">
                                <div class="feedtit">
                                    <div class="feedinfo">
                                        <span class="feedname link-style02">
                                            #if(${userProfiler} && ${userProfiler.nickname})
                                                ${userProfiler.nickname}
                                            #else
                                                #if(${feedback.account} && ${feedback.account}!="")
													${feedback.account}
												#else
													匿名
												#end
                                            #end
                                        </span>
                                        <span class="feedtime">$!date.format('yyyy-MM-dd HH:mm:ss',$!{feedback.gmtCreated}) </span>
                                    </div>
                                </div>
                                <div class="feedcont">
                                    ${feedback.content}
                                </div>
                                #if($!{feedback.checkStatus}=="1")
                                    <div class="feedbackcont margin-style03">
                                        <span class="fontweight">回复:</span>
                                        $!date.format('yyyy-MM-dd hh:mm:ss',$!{feedback.gmtReply})
                                    </div>
                                #end
