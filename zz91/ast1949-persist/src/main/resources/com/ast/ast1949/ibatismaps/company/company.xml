				</isEqual>
			<isNotEqual compareValue="zh" property="industryCode">
				c.industry_code = #industryCode#
				</isNotEqual>
		</isNotEmpty>
		<isNotEmpty prepend="and" property="keywords">
			c.business like concat('%',#keywords#,'%') 
			</isNotEmpty>
	</select>

