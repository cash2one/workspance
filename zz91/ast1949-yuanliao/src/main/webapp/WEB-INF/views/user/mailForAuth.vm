#set($layout="/layout/resetPasswordLayout.vm")
<script src="$!{address.img}/zz91/forgetpasswd/js/forgetpasswd.js"></script>
<link rel="stylesheet" href="http://img0.zz91.com/zz91/polymer/css/library-cp.css" />
<div class="forgot">
    <!--end f-header-->
    <div class="f-content">
	<div class="f-title">
    	我忘记了用户名
    </div>
    <!--end f-title-->
    <form action="/user/mailforauthnext.html" method="post" id="form_email">
    <div class="f-login">
    	<div class="f-login-title">
        	请输入您注册时的邮箱，方便我们开始为您进行服务：
        </div>
        <!--end f-login-title-->
        <div class="f-login-box">
        	邮箱：
        	  <input name="email" type="text" class="f-text" id="email" />
			  #if($!{errorMsg})
              <span class=post_error>$!{errorMsg}</span>
              #else
              <span class=post_error></span>
			  #end
      </div>
        <!--end f-login-box-->
        <input type="submit" class="f-login-ok" value="" />
        <input id = "error" type= "hidden" value = "$!{error}" />
    </div>
    </form>
    <!--end f-login-->
    </div>
    <!--end f-content-->
</div>
<!--end forgot-->
<script type="text/javascript" >
	  if (jQuery("#error").val()== 1) {
            alert("您已发送邮箱5次，请换其他方式找回密码!");
        }
</script>