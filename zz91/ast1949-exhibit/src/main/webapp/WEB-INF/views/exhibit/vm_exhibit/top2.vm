<script type="text/javascript">    
  jQuery(document).ready(function() {
   var autoFun;
         jQuery('#ext_carousel_ul li:first').before( jQuery('#ext_carousel_ul li:last'))      
         jQuery('#ext_right_scroll img').click(function(){
            var item_width =  jQuery('#ext_carousel_ul li').outerWidth() + 6;
            var left_indent = parseInt( jQuery('#ext_carousel_ul').css('left')) - item_width;
             jQuery('#ext_carousel_ul:not(:animated)').animate({'left' : left_indent},500,function(){    
                 jQuery('#ext_carousel_ul li:last').after( jQuery('#ext_carousel_ul li:first')); 
                 jQuery('#ext_carousel_ul').css({'left' : '-144px'});
            }); 
        });
         jQuery('#ext_left_scroll img').click(function(){          
            var item_width =  jQuery('#ext_carousel_ul li').outerWidth() + 6;
            var left_indent = parseInt( jQuery('#ext_carousel_ul').css('left')) + item_width;
             jQuery('#ext_carousel_ul:not(:animated)').animate({'left' : left_indent},500,function(){    
             jQuery('#ext_carousel_ul li:first').before( jQuery('#ext_carousel_ul li:last')); 
             jQuery('#ext_carousel_ul').css({'left' : '-144px'});
            });  
        });
	autoSlide();
	 //***停止滚动
	 clearFun( jQuery('#ext_carousel_ul'));
	 clearFun(jQuery('#ext_right_scroll img'));
	 clearFun( jQuery('#ext_left_scroll img'));
	 //***事件划入时停止自动滚动
	 function clearFun(elem){
	     elem.hover(function(){
	         clearAuto();
	     }, function(){
	         autoSlide();
	     });
	 }
	 //***自动滚动
	 function autoSlide(){
	     jQuery('#ext_right_scroll img').trigger('click');
	     autoFun = setTimeout(autoSlide, 3000);//此处不可使用setInterval,setInterval是重复执行传入函数,这会引起第二次划入时停止失效
	 }
	 //***清除自动滚动
	
 function clearAuto(){
	     clearTimeout(autoFun);
	 }
  });

</script>