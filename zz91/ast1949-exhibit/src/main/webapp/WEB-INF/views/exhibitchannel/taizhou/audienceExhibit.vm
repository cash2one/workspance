<script >
		
		jQuery(document).ready(function(){
		var registerChecked = true;
		jQuery("#exid4").attr("href","#");
		jQuery("#exid4").attr("class","on");
		//申请提交弹框
		//获取窗口的高度 
			var windowHeight; 
		//获取窗口的宽度 
			var windowWidth; 
		//获取弹窗的宽度 
			var popWidth; 
		//获取弹窗高度 
			var popHeight; 
			function init(){ 
   				windowHeight=$(window).height(); 
   				windowWidth=$(window).width(); 
   				popHeight=$(".tbox").height(); 
   				popWidth=$(".tbox").width(); 
			} 
		//关闭窗口
			function closeWindow(){ 
   				 $(".tbtn").click(function(){ 
        			window.parent.location.reload();
        		 }); 
    	} 
   		 //定义弹出居中窗口的方法 
    		function popSuccess(){ 
       			 init(); 
        //计算弹出窗口的左上角Y的偏移量 
    			var popY=(windowHeight-popHeight)+100; 
    			var popX=(windowWidth-popWidth)/2; 
    	//设定窗口的位置 
    			$("#center").css("top",popY).css("left",popX).slideToggle();  
    				closeWindow(); 
    		} 
		//提交表单数据
		jQuery("#onsubmit").click(function(){
			var flag=0;
			var ex=jQuery("#exflag").val();
			if(ex==0){
				if(comfirmFiled()){
					flag=1;
				}
				if(flag==1){
					jQuery.ajax({
						url: "#springUrl('/exhibitchannel/taizhou/doJoinExhibit.htm')",
						data: jQuery("#form_register").serialize(),
						cache: false,
						dataType: "json",
						type: "post",
						success: function (req) {
							if (req.success) {
								popSuccess();
								jQuery("#exflag").val(1);
							} 
						},
						failure: function () {}
					});
				}
			}
			
		});
		
		
	});
	//重置
		jQuery("#reset").click(function(){
			window.parent.location.reload();
		})
    </script>