<script>
jQuery(function(){
	fader("#J_fader");
});
function fader(selector){
	var el = jQuery(selector),
		pics = el.children(),
		length = pics.length,
		cur = 0;

	setInterval(function(){
		pics.eq(cur).fadeOut();
		cur = cur === length - 1 ? 0: cur + 1;
		pics.eq(cur).fadeIn();
	}, 3000);
}
</script>