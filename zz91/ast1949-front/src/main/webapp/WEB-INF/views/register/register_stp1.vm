#set($layout="/layout/registerLayout.vm")
<style>
    .passqd li{
    float: left;
    height: 15px;
    width: 40px;
    margin-right: 3px;
    line-height:15px;
    text-align:center;
    color:#fff;
    font-size:12px;
    background-color:#CCC;
    }
</style>

<div class="bg">
    <div id="center">
        <div class="registered">
            <h2 class="bg">欢迎加入ZZ91，开启废料生意网上之旅!</h2>
            <div id="left">
                <form action="#springUrl('/register/register_stp2.htm')" method="post" id="form_register">
                    <div class="item">
                        <span class="label">
                            <span class="red" >*</span>
                            邮箱：</span>
                            <div class="fl">
                                <input type="text" id="js_register_email" name="email" class="text" tabindex="1" value= "#if($!{account.email})$!{account.email}#end"/>
                                <span class=post_error>请输入邮箱</span>
                            </div>
                    </div>
                    <div class="item">
                        <span class="label">
                            <span class="red" >*</span>
                            用户名：</span>
                            <div class="fl">
                                <input type="text" id="js_register_username" name="account" class="text" tabindex="1" value="#if($!{account.account})$!{account.account}#end" />
                                <span class=post_error>请输入用户名</span>
                            </div>
                    </div>
                    <div class="item">
                        <span class="label">
                            <span class="red">*</span>
                            密码：</span>
                            <div class="fl">
                                <input type="password" id="js_register_password" name="password" class="text" tabindex="1" />
                                <span class=post_error>&nbsp;</span>
                                <ul class="passqd">
                                    <li id="weak"></li>
                                    <li id="middle"></li>
                                    <li id="strength"></li>
                                </ul>
                            </div>
                    </div>
                    <div class="item">
                        <span class="label">
                            <span class="red">*</span>
                            密码确认：</span>
                            <div class="fl">
                                <input type="password" id="js_register_password_confirm" name="passwordConfirm" class="text" tabindex="1" />
                                <span class=post_error>&nbsp;</span>
                            </div>
                    </div>
                    <div class="item">
                        <span class="label">
                            <span class="red">*</span>
                            姓名：</span>
                            <div class="fl">
                                <input name="contact" type="text" class="text1" id="js_register_name" tabindex="1" value="#if($!{account.contact})$!{account.contact}#end" />
                                <span class="lh24">
                                    <input name="sex" type="radio" value="0" #if(!$!{account.sex}||$!{account.sex}==0) checked="checked" #end />先生
									<input name="sex" type="radio" value="1" #if($!{account.sex}==1) checked="checked" #end />女士
								</span>
								<span class=post_error>请填写您的真实姓名</span>
                            </div>
                    </div>
                    <div class="item">
                        <span class="label">
                            <span class="red">*</span>
                            手机：</span>
                            <div class="fl">
                                <input name="mobile" type="text" class="text" id="js_register_phone" tabindex="1" value="#if($!{account.mobile})$!{account.mobile}#end"  />
                                <span class=post_error>请输入11手机号码</span>
                            </div>
                    </div>
                    <div class="item">
                        <span class="label">
                            <span class="red">*</span>
                            公司名称：</span>
                            <div class="fl">
                                <input name="name" type="text" class="text" id="js_register_company" tabindex="1" value="#if($!{company.name})$!{company.name}#end"  />
                                <span class=post_error>请输入您的公司名称</span>
                            </div>
                    </div>
                    <div class="item">
                        <span class="label">
                            <span class="red">*</span>
                            主营产品：</span>
                            <div class="fl">
                                <input name="business" type="text" class="text" id="js_register_business" tabindex="1" value="#if($!{company.business})$!{company.business}#end" />
                                <span class=post_error>请填写您供应或求购的废料产品</span>
                            </div>
                    </div>
                    <div class="item">
                        <span class="label">
                            <span class="red">*</span>
                            国家/地区：</span>
                            <div class="fl">
                                <div class="area_blue" id="area_blue" style="float:left">----国家/地区----</div>
                                <input type="hidden" name="areaCode" id="areacode" />
                                <span class=post_error>&nbsp;</span>
                            </div>
                            <div id="school-box">
                                <h1>国家/地区</h1>
                                <div id="country">
                                    <a id="1" href="javascript:getprovince('','10011000',1)">中国</a>
                                    <a href="javascript:getprovince('','1001',1)">其他国家</a>
                                </div>
                                <div id="school"></div>
                            </div>
                    </div>
##					<div class="item">
##						<label for="verifyCode" class="t"><span class="red">*</span>验证码：</label>
##						<input type="text" id="verifyCode" name="verifyCode" class="text" value="" size="16"  />
##						<span id="vtip">点击输入框显示验证码</span>
##						<span id="vspan" style="display:none;">
##							<img id="vcodeimg" src="$!{address.img}/front/images/global/loading.gif" width="80" height="26" title="看不清楚？点击图片换一张"/>
##							<a id="changeImg" href="javascript:void(0);" >看不清楚？换一张</a>
##						</span>
##					</div>
					<div class="item">
						<span class="label">
                            <span class="red">*</span>
                            验证码：</span>
                            <div class="fl" >
                                <input type="text" id="verifyCode" name="verifyCode" class="text" tabindex="1" value="" size="16" />
								<span id="vtip">点击输入框显示验证码</span>
								<span id="vspan" style="display:none;">
									<img id="vcodeimg" src="$!{address.img}/front/images/global/loading.gif" width="80" height="24" title="看不清楚？点击图片换一张"/>
									<a id="changeImg" href="javascript:void(0);" >看不清楚？换一张</a>
								</span>
                            </div>
                    </div>
                    <div class="item" style="margin-top:10px;">
                        <span class="label">快捷登录：</span>
                        <div class="fl" >
                            <a href="$!{address.china}/accessToQQLogin.htm" target="_blank">
                                <img src="$!{address.img}/zz91/china/images/qq_login_common.gif" width="124" height="24" alt="使用QQ号码登录" />
                            </a>
                        </div>
                    </div>
                    <div class="item" style="margin-top:10px;">
                        <span class="label">&nbsp;&nbsp;</span>
                        <div class="fl" >
                            <a href="javascript:openoverlay('firstview.htm','服务条款',800,400,0);">点击阅读服务条款</a>
                        </div>
                    </div>
                    <input class="submit" type="submit"  value="" />
					<input type="hidden" name="token" value="$!{token}" />
                </form>
            </div>
            <div id="right">
                <img src="$!{address.img}/zz91/css/image/icon.png" />
                <p class="f14">
                    <b>注册普通会员，可获得：</b>
                    <br />
                    1. 发布信息，让买家/卖家找到您<br />
                    供求信息：10条/天<br />
                    企业报价：10条/天<br />
                    2. 无限量查看资讯报价<br />
                    时刻掌握废料动态 <br />
                    3. 客户询盘，线上交谈，把握商机<br />
                    <b>如需帮助，请拨打：</b>
                    <span class="red">0571-56612345</span>
                    <br />
                </p>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">

	jQuery(document).ready(function(){
    	## 验证码错误
    	#if($!{error}=="1")
            alert("验证码填写错误！");
        #end
		#if($!{company.areaCode})
			getprovince('$!{addressLabel}','$!{company.areaCode}',0)
		#end
	});

	 //refresh vcode
    jQuery("#vcodeimg").click(function(){
        jQuery(this).attr("src", "#springUrl('/validationcode/vcode.htm?')"+new Date());
    });
	
	jQuery("#changeImg").click(function(){
        jQuery("#vcodeimg").attr("src", "#springUrl('/validationcode/vcode.htm?')"+new Date());
    });
	
	
	jQuery("#verifyCode").click(function(){
		jQuery("#vtip").hide();
		jQuery("#vspan").show();
		
		if(jQuery("#vcodeimg").attr("src")=="$!{address.img}/front/images/global/loading.gif"){
			jQuery("#vcodeimg").attr("src", "#springUrl('/validationcode/vcode.htm?')"+new Date());
		}
	});
	
</script>