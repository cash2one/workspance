#set($layout="/layout/resetPasswordLayout.vm")
<div class="forgot">
	
	<div class="f-header">
    	<img src="$!{address.img}/zz91/forgetpasswd/images/logo.jpg" class="fl" />
        <ul class="fr">
        	<li><a href="http://www.zz91.com/">返回首页</a></li>
        	<li><a href="http://www.zz91.com/login.htm">返回继续登录</a></li>
            <li>|</li>
            <li><a href="http://help.zz91.com/">帮助中心</a></li>
        </ul>
    </div>
    <!--end f-header-->
    <div class="f-content">
	<div class="f-title">
    	我忘记了密码
    </div>
    <!--end f-title-->
    <div class="f-login">
    <form action="/user/getPasswd.htm" method="post" id="form_username">
    	<div class="f-login-title">
        	请输入您的会员名，方便我们开始为您进行服务：
        </div>
        <!--end f-login-title-->
		
        <div class="f-login-box">
        	登录名：<input name="username" type="text" class="f-text" id="username" />
            <span class=post_error>$!{errorMsg}</span>
        </div>
        <div style="clear:both"></div>
        <!--end f-login-box-->
		
        <input name="Submit1" type="image" class="f-login-ok" id="buttonMaxGray" value="" src="$!{address.img}/zz91/forgetpasswd/images/next.jpg">
        
    </form>
    </div>
    <!--end f-login-->
    </div>
    <!--end f-content-->
</div>
