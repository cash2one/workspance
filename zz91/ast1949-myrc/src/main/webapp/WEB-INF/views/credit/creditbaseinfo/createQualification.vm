    <!--end mainblock1-->
    <div class="mainblock2">
    	<div class="m2-title">
        	<ul class="m2-button">
            	<li>
					<a href="#springUrl('/credit/creditbaseinfo/index.htm')">认证信息
        				<span class="m-orange">
        					#if($!{checkStatus} == "0")
