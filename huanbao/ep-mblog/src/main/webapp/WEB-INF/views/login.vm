#set($layout='/layout/normLayout.vm')

<link rel="stylesheet" type="text/css" href="http://img0.huanbao.com/huanbao/mblog/css/wei.css" />
<script type="text/javascript" src="http://img0.huanbao.com/huanbao/mblog/js/wei.js"></script>

<div class="login">
	<div class="l-top">
    	<img src="http://img0.huanbao.com/huanbao/mblog/images/logo.jpg" />
    </div>
    <!--end l-top-->
    <div class="l-main">
    	<div class="l-main-register">
        	<div class="l-register-left fl"></div>
            <div class="l-register-center fl">
            	<a href="$!{address.www}/myesite/regist.htm">立刻注册</a>
            </div>
            <div class="l-register-right fl"></div>
            <div class="cb"></div>
        </div>
        <!--end l-main-register-->
		<form id="loginForm1" name="loginForm" action="#springUrl('/doLogin.htm')" method="post">
    	#if($!{epAuthUser} && $!{epAuthUser}!="")
			
    		<div class="l-main-box">
				<div class="l-main-info2">
    				<font>#if($!{errorText})你的微交流帐号已被冻结 &nbsp;#end</font>
    				
    			</div>
            	<div class="l-box-name">
					$!{epAuthUser.account}
                </div>
                <!--end l-box-name-->
                <div class="l-box-anniu mt30">
                    <div class="l-anniu-left fl"></div>
                    <div class="l-anniu-center fl">
                        <a href="#springUrl('/index.htm')">登录</a>
                    </div>
                    <div class="l-anniu-right fl"></div>
                    <div class="cb"></div>
                </div>
                <!--end l-main-register-->
                <div class="l-box-anniu mt30">
                    <div class="l-anniu-left fl"></div>
                    <div class="l-anniu-center fl">
                        <a href="#springUrl('/logout.htm')">更换账号/退出</a>
                    </div>
                    <div class="l-anniu-right fl"></div>
                    <div class="cb"></div>
                </div>
                <!--end l-main-register-->
    		</div>
		#else	
			<div class="l-main-box l-main-info">
				<font>  $!{errorText}&nbsp; </font>
			</div>
			<div class="l-main-box">
				用户名
				<div class="l-box-username">
                	<input type="text" class="l-box-text validate[required,custom[vaccount]]"  name="username" id="username" value="$!{userName}"/>
                </div>
                <!--end l-box-uesrname-->
    			密码
                <div class="l-box-password">
                	<input type="password" class="l-box-text validate[required]" name="password" id="password" value="$!{passWord}"/>
                </div>
                <!--end l-box-uesrname-->
                <div class="l-box-forget">
					<div class="fl"><input type="checkBox" id="checkPassWord" name="checkPassWord" #if($!{passWord}) checked="checked" #end/>记住密码</div>
                	<div class="fr"><a href="${address.www}/user/find_pwf.htm" target="_blank" title="点击找回密码">忘记密码</a></div>&nbsp;
                    <div class="cb"></div>
                </div>
                <!--end l-box-forget-->
                <div class="l-box-anniu">
                    <div class="l-anniu-left fl"></div>
                    <div class="l-anniu-center fl">
						<input type="submit" class="l-anniu-login" value="登录" onclick=quklogin();>
                          ##<a href="javascript:quklogin();">登录</a>
                    </div>
                    <div class="l-anniu-right fl"></div>
                    <div class="cb"></div>
                </div>
                <!--end l-main-register-->
                <div class="l-box-now">
                	还没有账号？<a href="$!{address.myesite}/regist.htm">立刻注册？</a>
                </div>
                <!--end l-box-text-->
			</div>
			<input type="hidden" name="refurl" value="$!{refurl}" />
		#end
		</form>
        <!--end l-main-box-->
    </div>
    <!--end l-main-->
</div>
<!--end login-->
#parse("/common/importValidateOriginal.vm")
<script>
	jQuery('document').ready(function(){
		jQuery("#loginForm1").validationEngine("attach");
	});
	
	function quklogin(){
		jQuery("#loginForm1").submit();
	}	
</script>