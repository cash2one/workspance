#set($layout='/layout/blank.vm')

<div class="pop-up">
	<div class="pu-top"></div>
    <!--end pu-top-->
    <div class="pu-center">
    	<div class="pu-box">
        	<div class="pu-box-block1">
            	<div class="pu-block1-img">
					#if($!{infoDto.mBlogInfo.headPic})
					 <img src="$!{address.thumb}$!{address.resource}$!{infoDto.mBlogInfo.headPic}" width="88px;" height="88px;"/>
					#else
					<img src="http://img0.huanbao.com/huanbao/mblog/images/no_img1.jpg" />	
					#end	
                </div>
                <div class="pu-block1-text">
                	<ul class="pu-block1-ul1">
                    	<li>
							#if($!{infoDto.mBlogInfo.sex}=='0') 
							<img src="http://img0.huanbao.com/huanbao/mblog/images/img10.jpg" />
							#else
							<img src="http://img0.huanbao.com/huanbao/mblog/images/icon9.jpg" />	
							#end
						</li>
                        <li style="line-height:14px">$!{infoDto.mBlogInfo.name}</li>
                        <div class="cb"></div>
                    </ul>
                    <ul class="pu-block1-ul2">
                    	<li><span class="pu-block1-blue">关注</span>$!{infoDto.followCount}</li>
                        <li class="sm-hot-grey">|</li>
                        <li><span class="pu-block1-blue">粉丝</span>$!{infoDto.fansCount}</li>
                        <li class="sm-hot-grey">|</li>
                        <li><span class="pu-block1-blue">博文</span>$!{infoDto.mblogCount}</li>
                        <div class="cb"></div>
                    </ul>
                </div>
                <!--end publock1-text-->
                <div class="cb"></div>
            </div>
            <!--end pu-box-bloc1-->
            <div class="pu-block2">
            	<a href="#springUrl('/ublog')$!{infoDto.mBlogInfo.id}.htm">
					$!{address.mblog}ublog$!{infoDto.mBlogInfo.id}.htm
                </a>	
            </div>
            <!--end pu-block2-->
            <div class="pu-block3">
            	$!{compProfile.detailsQuery}
            </div>
            <!--end pu-block2-->
            <div class="pu-anniu">
				#if($!{info.id}==$!{infoDto.mBlogInfo.id})
				#elseif($!{follow} && $!{follow.followStatus}=='1' && $!{follow.type}=='1')
				<img src="http://img0.huanbao.com/huanbao/mblog/images/focus3.jpg"/>	
				#elseif($!{follow} && $!{follow.followStatus}=='1' && $!{follow.type}=='0')
				<img src="http://img0.huanbao.com/huanbao/mblog/images/focus2.jpg"/>	
				#else
				<img src="http://img0.huanbao.com/huanbao/mblog/images/add_focus.jpg" onclick="changeFocus(this,$!{infoDto.mBlogInfo.id});" />	
				#end
            </div>
            <!--end pu-anniu-->
            <div class="cb"></div>
        </div>
        <!--end pu-box-->
    </div>
    <!--end pu-center-->
    <div class="pu-down"></div>
    <!--end pu-down-->
</div>
<!--end pop-up-->
