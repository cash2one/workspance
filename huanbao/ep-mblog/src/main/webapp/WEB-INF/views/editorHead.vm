    <!--end wei-nav-->
    <div class="EditorHead">
    	<div class="eh-left">
        	<div class="eh-left-title">
            	<img src="http://img0.huanbao.com/huanbao/mblog/images/info.jpg" />
            </div>
            <!--end as-left-title-->
            <div class="eh-item">
            	<div class="eh-local">
                	<img src="http://img0.huanbao.com/huanbao/mblog/images/local_img.jpg" id="uploadBtn"/>
                </div>
                <!--end eh-local-->
                <div class="eh-info sm-hot-grey">
                	<input type="checkbox" class="eh-chenckbox"  />仅支持JPG、GIF、PNG格式，文件小于5M。（使用高质量的图片，可生成高清头像）
                </div>
                <!--end eh-info-->
                <div class="eh-info">
                	<input type="checkbox" class="eh-chenckbox"  />上传原始图片，在头像相册中显示
                </div>
                <!--end eh-info-->
				<form method="post" action="#springUrl('/doUpdateHeadPic.htm')" id="headPicForm" name="headPicForm">
                <div class="eh-img">
                	<div class="eh-bigImg fl">
						#if($!{info.headPic})
                    	<img src="$!{address.thumb}$!{address.resource}$!{info.headPic}"  id="pic1" style="width:297px;height:273px;"/>
						#else
						<img src="http://img0.huanbao.com/huanbao/mblog/images/heading_img1.jpg"  id="pic1" style="width:297px;height:273px;"/>	
						#end
                    </div>
					<input type="hidden"  value="" id="headPic" name="headPic"/>
