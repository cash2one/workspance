				  </form>
                <!--end eh-button-->
            </div>
            <!--end eh-item-->
        </div>
        <!--end as-right-->
    </div>
    <!--end AccountSettings-->
</div>
<!--end main-->
<script >
jQuery('document').ready(function(){
    jQuery("#uploadBtn").click(function(){
       var photoBox=new Asto.util.Modal({
    	   title:"上传公司形象照片",
    	   url:"#springUrl('/photo/promptUpload.htm')?targetType=mblogHead&targetId=$!{info.id}&albumId=-1&max=1",
		   width:500,
    	   height:350,
    	   modal:true
        });
    	Asto.util.Callback.setSubmitCallback(function(success, data){
    		if(success=="true"){
    			for(var key in data){
    				//重新加载新上传的图片
    				jQuery("#pic1").attr('src',"$!{address.thumb}$!{address.resource}"+data[key]+"&width=297px&height=273px");
					jQuery("#pic2").attr('src',"$!{address.thumb}$!{address.resource}"+data[key]+"&width=180&height=180");
					jQuery("#pic3").attr('src',"$!{address.thumb}$!{address.resource}"+data[key]+"&width=50&height=50");
					jQuery("#pic4").attr('src',"$!{address.thumb}$!{address.resource}"+data[key]+"&width=30&height=30");
					jQuery("#headPic").val(data[key]);;
    			}
    		}
    		photoBox.close();
        });  
    	  
    })
})

function doUpdateInfoPic(){
   jQuery("#headPicForm").submit();	
}


function searchFindMblog(){
 	jQuery("#searchMblog").submit();
 }

</script>
