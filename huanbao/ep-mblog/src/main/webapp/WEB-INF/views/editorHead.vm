								<img src="$!{address.thumb}$!{address.resource}$!{info.headPic}"  id="pic2" style="width:180px;height:180px;"/>	
								#else	
                            	<img src="http://img0.huanbao.com/huanbao/mblog/images/heading_img2.jpg" id="pic2" style="width:180px;height:180px;"/>
								#end
                            </div>
                            <!--end eh-img1-->
                            大尺寸头像180*180像素
                        </div>
                        <!--end eh-smallImg-block1-->
                        <div class="eh-smallImg-block2 fr">
                        	<div class="eh-block2-box1">
                            	<div class="eh-img2">
									#if($!{info.headPic})
									<img src="$!{address.thumb}$!{address.resource}$!{info.headPic}" id="pic3" style="width:50px;height:50px;"/>	
									#else
									<img src="http://img0.huanbao.com/huanbao/mblog/images/heading_img3.jpg" id="pic3" style="width:50px;height:50px;"/>	
									#end	
                                </div>
                                <!--end eh-img2-->
                                中尺寸头像
                                50*50像素
                                (自动生成
                            </div>
                            <!--end eh-block2-box1-->
                            <div class="eh-block2-box1 mt8">
                            	<div class="eh-img3">
									#if($!{info.headPic})
									<img src="$!{address.thumb}$!{address.resource}$!{info.headPic}" id="pic4" style="width:30px;height:30px;"/>
									#else
                                	<img src="http://img0.huanbao.com/huanbao/mblog/images/heading_img4.jpg" id="pic4" style="width:30px;height:30px;"/>
									#end	
                                </div>
                                <!--end eh-img2-->
                                中尺寸头像
                                50*50像素
                                (自动生成
                            </div>
                            <!--end eh-block2-box1-->
                        </div>
                        <!--end eh-smallImg-block2-->
