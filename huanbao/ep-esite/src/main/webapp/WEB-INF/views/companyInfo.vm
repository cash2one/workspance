#set($layout="/layout/defaultS.vm")
<div class="contain" > 
	## navigation
	<div class="location">
		#parse('/common/esitenavigation.vm')
		>
		<a href="#springUrl('/companyInfo')$!{mid}.htm" >公司介绍</a>
	</div>

	<div class="mainblock">
		#parse("/common/esiteleft.vm")
		
		<div class="mk-body">
			<div class="panel mt8px">
				<h3>
					<table>
						<tr>
							<td>公司介绍</td>
						</tr>
					</table>
				</h3>
				<div class="panel-body">
					#cacheFragment("$!{address.fragment}/fragment/esite/compImage.htm?cid=$!{cid}", "", "", "")
					    #if(${compImage.size()} == 0 ) 
					    	<img src="$!{address.img}/huanbao/images/trade/tradelist/noprod.gif" width="228" height="177" align="left" />
						#else 
					    	#set($topPhoto=${compImage.get(0)})
					    	<img src="$!{address.thumb}$!{address.resource}$!{topPhoto.path}&width=234&height=177" width="228" height="177" align="left" />
						#end
					 #end

					 #if("$!{profile.detailsQuery}"=="")
						#if("$!{profile.name}"=="")
							该公司未填写公司名称-$!{account.contact}是中国环保注册会员，该公司主营产品：$!{profile.mainProductSupply}，联系人：$!{account.contact}，联系电话：$!{account.phone}。欢迎与该公司未填写公司名称-我们联系洽谈合作
						#elseif("$!{profile.name}"=="个体经营")
							#if($!{profile.mainProductSupply} && $!{profile.mainProductSupply}!="")
	                            #if($!{account.contact}=="")
									$!{profile.name}是中国环保注册会员，该公司主营产品：$!{profile.mainProductSupply}，联系电话：$!{account.phone}。欢迎与我们联系洽谈合作
								#else
							       $!{profile.name}是中国环保注册会员，该公司主营产品：$!{profile.mainProductSupply}，联系人：$!{account.contact}，联系电话：$!{account.phone}。欢迎与我们联系洽谈合作		
								#end
							#else
							    #if($!{account.contact}!="" && $!{account.contact})
									$!{profile.name}是中国环保注册会员，联系人：$!{account.contact}，联系电话：$!{account.phone}。欢迎与我们联系洽谈合作
								#else
								   $!{profile.name}是中国环保注册会员，联系电话：$!{account.phone}。欢迎与我们联系洽谈合作	
								#end
							#end	
						#else
							#if($!{profile.mainProductSupply} && $!{profile.mainProductSupply}!="")
								#if($!{account.contact}=="")
									$!{profile.name}是中国环保注册会员，该公司主营产品：$!{profile.mainProductSupply}，联系电话：$!{account.phone}。欢迎与我们联系洽谈合作
								#else
							       $!{profile.name}是中国环保注册会员，该公司主营产品：$!{profile.mainProductSupply}，联系人：$!{account.contact}，联系电话：$!{account.phone}。欢迎与我们联系洽谈合作		
								#end	
							#else
							    #if($!{account.contact}!="" && $!{account.contact})
									$!{profile.name}是中国环保注册会员，联系人：$!{account.contact}，联系电话：$!{account.phone}。欢迎与我们联系洽谈合作
								#else
								   $!{profile.name}是中国环保注册会员，联系电话：$!{account.phone}。欢迎与我们联系洽谈合作	
								#end
							#end
						#end
					 #else
						$!{profile.detailsQuery}
					 #end
					 
				</div>
				<div class="clear"></div>
			</div>
			<div class="panel mt8px">
				<h3>
					<table>
						<tr>
							<td>公司详细信息</td>
						</tr>
					</table>
				</h3>
				<div class="panel-body">
					<table class="msb_dmtb">
						<tbody>
							<tr>
								<td width="324px"><em class="fontw">公司名称：</em>$!{profile.name}</td>
								<td width="310px"><em class="fontw">法人代表：</em>$!{profile.legal}</td>
							</tr>		
							<tr>
								<td><em class="fontw">主营产品：</em>$!{profile.mainProductSupply}</td>
								<td><em class="fontw">主营行业：</em>$!{compProfile.industryName}</td>
							</tr>
							<tr>
								<td><em class="fontw">主要品牌：</em>$!{profile.mainBrand}</td>
								<td><em class="fontw">会员身份：</em>$!{memberInfo} 
									$!{memberYear}年</td>
							</tr>
							<tr>
								<td><em class="fontw">注册资本：</em>$!{profile.funds}</td>
								<td><em class="fontw">注册地址：</em>$!{compProfile.provinceName} $!{compProfile.areaName}</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
			#cacheFragment("$!{address.fragment}/fragment/esite/contact.htm?cid=$!{cid}&details","","","600")
			<div class="panel mt8px">
				<h3>
					<table>
						<tr>
							<td>联系方式</td>
						</tr>
					</table>
				</h3>
				<div class="panel-body">
					<table border="1" bordercolor="#E2E5E2" class="table_add">
						<tbody>
							<tr>
								<td class="table_add_tdl">公司名称：</td>
								<td class="table_add_tdr">$!{profile.name}</td>
							</tr>
							<tr>
								<td class="table_add_tdl">电话号码：</td>
								<td class="table_add_tdr">$!{account.phoneArea} $!{account.phone}</td>
							</tr>
							<tr>
								<td class="table_add_tdl">传真号码：</td>
								<td class="table_add_tdr">$!{account.faxArea} $!{account.fax}</td>
							</tr>
							<tr>
								<td class="table_add_tdl">联 系 人：</td>
								<td class="table_add_tdr">$!{account.contact}</td>	
							</tr>
							#if("$!{profile.memberCode}" == "10011001")
							<tr>
								<td class="table_add_tdl">手机号码：</td>
								<td class="table_add_tdr">$!{account.mobile}</td>
							</tr>
							#else
							<tr>
								<td class="table_add_tdl">手机号码：</td>
								<td class="table_add_tdr">#if($!{epAuthUser}) $!{account.mobile} #else <a href="javascript:void(0);" class="loginView">登陆</a>免费查看手机号码! #end</td>
							</tr>
							#end
							<tr>
								<td class="table_add_tdl">详细地址：</td>
								<td class="table_add_tdr">$!{profile.address}</td>
							</tr>
							<tr>
								<td class="table_add_tdl">邮政编码：</td>
								<td class="table_add_tdr">$!{profile.addressZip}</td>
							</tr>
							<tr>
								<td class="table_add_tdl">公司网址：</td>
								<td class="table_add_tdr">$!{profile.domain}</td>
							</tr>
							<tr>
								<td class="table_add_tdl">电子邮箱：</td>
								<td class="table_add_tdr"><a href="#springUrl('/message')$!{mid}.htm" style="color:#0774ac;">通过本站在线留言给展商</a></td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
			#end
		</div>
		<div class="clear"></div>
	</div>
</div>


