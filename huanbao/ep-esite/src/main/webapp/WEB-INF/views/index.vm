#set($layout="/layout/defaultS.vm")
<div class="contain">

	## navigation
	<div class="location">
		#parse('/common/esitenavigation.vm')
	</div>

	<div class="mainblock">

		#parse("/common/esiteleft.vm")

		<div class="mk-body">
			<div class="panel mt8px">
				<h3>
					<table>
						<tr>
							<td>公司介绍</td>
						</tr>
					</table>
				</h3>
				<div class="panel-body">
					#cacheFragment("$!{address.fragment}/fragment/esite/compImage.htm?cid=$!{cid}", "", "", "")	
					    #if(${compImage.size()} == 0 ) 
					    	<img src="$!{address.img}/huanbao/images/trade/tradelist/noprod.gif" align="left" width="228" height="177" />
						#else 
					    	#set($topPhoto=${compImage.get(0)})
					    	<img src="$!{address.thumb}$!{address.resource}$!{topPhoto.path}&width=234&height=177" align="left" width="228" height="177" />
						#end
					 #end

					#printTitle("$!{profile.detailsQuery}" 310 "")

					#if($!{profile.id}<50000000)
						#if($!{profile.mainProductSupply} && $!{profile.mainProductSupply}!="")
    						</br>
    						该公司主营产品：$!{profile.mainProductSupply}
    					#end
    					#if($!{account.contact}!="")
    						#if(!$!{profile.mainProductSupply})
    							</br>
    						#end
    						联系人：$!{account.name}
    					#end
    					#if($!{account.phone}!="")
    						联系电话:$!{account.phone}
    					#end
    				#end
					[<a href="#springUrl('/companyInfo')$!{mid}.htm" style="color:#0774ac;">查看详细</a>]
				</div>
				<div class="clear"></div>
			</div>

			#if("$!{profile.memberCode}" == "10011001")
				#cacheFragment("$!{address.fragment}/fragment/esite/recommendSupply.htm?cid=$!{cid}&size=8&est", "", "", "")
					<div class="panel mt8px">
						<h3>
							<table>
								<tr>
									<td>推荐产品</td>
								</tr>
							</table>
						</h3>
						<div class="panel-body">
							<ul class="pb-lidl">
								#foreach($supply in $!{list})
									<li>
										<dl>
											<dt>
												#if("$!{supply.photoCover}" == "")
													<img src="$!{address.img}/huanbao/images/trade/tradelist/noprod.gif"  style=" width:154px;height:124px;"/>
												#else
													<img src="$!{address.thumb}$!{address.resource}$!{supply.photoCover}&width=154&height=124" style=" width:154px;height:124px;" />
												#end
											</dt>
											<dd><a href="#springUrl('/detail')$!{supply.id}.htm" target="_blank">#printTitle($!{supply.title} 12 "")</a><br />
												<em style="color:#f00;">
													#if("$!{supply.priceNum}"=="" || "$!{supply.priceNum}"=="0")
														面议
													#else
														$!{supply.priceNum}
														#if("$!{supply.priceUnits}"=="")
															元
														#else
															$!{supply.priceUnits}
														#end
													#end
												</em>
											</dd>
										</dl>
									</li>
								#end
							</ul>
							<div class="clear"></div>
						</div>
					</div>
				#end
				<div class="panel mt8px">
					<h3>
						<table>
							<tr id="slider">
								<td class="panelssbjn"><p>荣誉证书</p></td>
								<td class="panelssbj"><p>环保证书</p></td>
							</tr>
						</table>
					</h3>
					<div id="sliderList">
						#cacheFragment("$!{address.fragment}/fragment/esite/creditFiles.htm?cid=$!{cid}&size=8", "", "", "")
						<div id="ltbc_1" class="paneldis">
							<ul class="pb-lidl">
								#foreach($file in $!{list})
								<li style="width:170px;">
									<dl>
										<dt>
										#if("$!{file.picture}" == "")
											<img src="$!{address.img}/huanbao/images/trade/tradelist/noprod.gif" style="width:154px;height:124px;"/>
										#else
											<a href="$!{address.resource}$!{file.picture}" id="thickImg" class="thickbox">
												<img src="$!{address.thumb}$!{address.resource}$!{file.picture}&width=154&height=124" style=" width:154px;height:124px;"/>
											</a>
										#end				
										</dt>
										<dd>$!{file.fileName}</dd>
									</dl>
								</li>
								#end
							</ul>
							<div class="clear"></div>
						</div>
						#end

	    				<div id="ltbc_2" class="panelundis">
	    					<ul class="pb-lidl">
	    						<li style="width:170px;">
	    							<dl>
	    								<dt>
	    									<a href="JavaScript:viewContact(9405699);"><img src="$!{address.img}/huanbao/images/esite/zht.jpg" style=" width:154px;height:124px;"/></a>
	    								</dt>
	    								<dd>中环通证书</dd>
	    							</dl>
	    						</li>
	    					</ul>
	    					<div class="clear"></div>
	    				</div>
					</div>
				</div>
			
	            <script type="text/javascript">
	            	jQuery(document).ready(function(){
	            		jQuery("#slider td").mouseover(function(e){
	            			jQuery("#slider td").not("eq("+(jQuery(this).index())+")").attr("class","panelssbj");
	            			jQuery(this).attr("class","panelssbjn");
	            			
	            			jQuery("#sliderList > div").not("eq("+(jQuery(this).index())+")").hide();
	            			jQuery("#sliderList > div").eq(jQuery(this).index()).show();
	            		});
	            	});
					
					function viewContact(cid) {
	                    jQuery("#divSCA").dialog({
	                    width:900,
	            		height:780,
	                    modal:true
	                    });
	                }
	            </script>
			
				#cacheFragment("$!{address.fragment}/fragment/company/newestCompNews.htm?categoryCode=1000&cid=$!{cid}&size=6&ei", "", "", "")
				<div class="panel mt8px">
					<h3>
						<table>
							<tr>
								<td>最新公司动态</td>
							</tr>
						</table>
						<span style="right:20px; top:8px;">>><a href="#">更多</a></span>
					</h3>
					<div class="panel-body">
						<ul class="pb-ultime">
							#foreach($news in $!{list})
							<li><a href="#springUrl('/newsDetails')$!{news.id}.htm">#printTitle($!{news.title} 40 "")</a><span>#printFragmentDate("yyyy-MM-dd" $!{news.gmtPublish})</span></li>
							#end
						</ul>
					</div>
				</div>
				#end

				#cacheFragment("$!{address.fragment}/fragment/company/newestCompNews.htm?categoryCode=1001&cid=$!{cid}&size=6", "", "", "")
				<div class="panel mt8px">
					<h3>
						<table>
							<tr>
								<td>最新技术文章</td>
							</tr>
						</table>
						<span style="right:20px; top:8px;">>><a href="#">更多</a></span>
					</h3>
					<div class="panel-body">
						<ul class="pb-ultime">
							#foreach($news in $!{list})
							<li><a href="#springUrl('/newsDetails')$!{news.id}.htm">#printTitle($!{news.title} 40 "")</a><span>#printFragmentDate("yyyy-MM-dd" $!{news.gmtPublish})</span></li>
							#end
						</ul>
					</div>
				</div>
				#end

			#else
			<div class="panel mt8px">
				<h3>
					<table>
						<tr>
							<td><h2 style="font-size:15px;">产品展示</h2></td>
						</tr>
					</table>
					<span style="right:16px;top:4px;">
					<form action="#springUrl('/products').htm" method="post" >
						<input name="keywords" type="text" class="list_input" value="$!{keywords}"/>
						<input name="cid" type="hidden" value="$!{cid}"/>
						<input name="group" type="hidden" value="$!{group}"/>
						<input type="submit" value="搜索" class="list_search"/>
					</form>
					</span>
				</h3>
				<div class="panel-body">
					<ul class="pb-ulpage">
						#foreach($list in $!{page.records})
						<li>
							<table>
								<tbody>
									<tr>
										<td width="130px">
											<a href="$!{address.trade2}/supply/detail${list.id}.htm" target="_blank">
								                #if("$!{list.photoCover}"=="")
													<img src="$!{address.img}/huanbao/images/trade/tradelist/noprod.gif" style=" width:120px;height:80px;" alt="$!{list.title}"/>
												#else
													<img src="$!{address.thumb}$!{address.resource}$!{list.photoCover}&width=120&height=80" style=" width:120px;height:80px;" alt="$!{list.title}"/>
												#end
								            </a>
										</td>
										<td style="padding-right:8px" width="280px" align="left"><h4><a href="$!{address.trade2}/supply/detail${list.id}.htm" target="_blank">#printTitle($!{list.title} 24 "")</a></h4> 
											<p class="gd_p">#printTitle($!{list.detailsQuery} 50 '...')</p>
										</td>
										<td width="130px" align="center">
											<em style="color:#f00;">
											#if("$!{list.priceNum}"=="" || "$!{list.priceNum}"=="0")
								            	面议
								            #else
								            	$!{list.priceNum}
								            	#if("$!{list.priceUnits}"=="")
								            	元
								                #else
								            	    $!{list.priceUnits}
								                #end
								            #end
											</em>
										</td>
										<td width="135px" align="center">#printFragmentDate("yyyy-MM-dd" $!{list.gmtRefresh})</td>
									</tr>
								</tbody>
							</table>
						</li>
						#end
					</ul>
					<div class="msb3_page">
						<table>
							<tbody>
								<tr>
									#newStaticPageNav(${page} "#springUrl('/products')$!{cid}--$!{group}--$!{keywords}" "" "")
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
			#end
		</div>
		<div class="clear"></div>
	</div>
</div>
#parse("/common/zhtcert.vm")

