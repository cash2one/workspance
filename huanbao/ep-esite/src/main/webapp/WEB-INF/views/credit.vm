#set($layout="/layout/defaultS.vm")
<div class="contain" >
	<div class="location">
		#parse("/common/esitenavigation.vm")
		> 
		<a href="#springUrl('/credit')$!{mid}.htm">荣誉证书</a>
	</div>
	<div class="mainblock">
		#parse("/common/esiteleft.vm")
		
		<div class="mk-body">
			<div class="panel mt8px">
			    <h3>
					<table>
						<tr id="slider">
							<td class="panelssbjn"><p>荣誉证书</p></td>
							#if("$!{profile.memberCode}" == "10011001")
							<td class="panelssbj"><p>环保证书</p></td>
							#end
						</tr>
					</table>
				</h3>
				<div id="sliderList">
				#cacheFragment("$!{address.fragment}/fragment/esite/creditFiles.htm?cid=$!{cid}&size=8&cd", "", "", "")
				<div id="ltbc_1" class="paneldis">
					<ul class="pb-lidl">
						#foreach($file in $list)
    						<li style="width:170px;">
    							<dl>
    								<dt>
    									#if("$!{file.picture}" == "")
    										<img src="$!{address.img}/huanbao/images/trade/tradelist/noprod.gif"  style=" width:283px;height:228px;"/>
    									#else
    										<a href="$!{address.resource}$!{file.picture}" id="thickImg" class="thickbox" target="_blank">
    											<img src="$!{address.thumb}$!{address.resource}$!{file.picture}&width=170&height=228" style=" width:283px;height:228px;" />
    										</a>
    									#end				
    								</dt>
    								<dd>$!{file.fileName}</dd>
    							</dl>
    						</li>
							<div class="clear"></div>
						#end
					</ul>
					<div class="clear"></div>
				</div>
				#end
				#if("$!{profile.memberCode}" == "10011001")
    				<div id="ltbc_2" class="panelundis">
    					<ul class="pb-lidl">
    						<li style="width:170px;">
    							<dl>
    								<dt>
    									<a href="JavaScript:viewContact();">
    										<img src="$!{address.img}/huanbao/images/esite/zht.jpg" style=" width:283px;height:228px;"/>
    									</a>
    								</dt>
    								<dd>中环通证书</dd>
    							</dl>
    						</li>
    					</ul>
    					<div class="clear"></div>
    				</div>
				#end
				</div>
			</div>
            <script type="text/javascript">
            	jQuery(document).ready(function(){
            		jQuery("#slider td").mouseover(function(e){
            			jQuery("#slider td").not("eq("+(jQuery(this).index())+")").attr("class","panelssbj");
            			jQuery(this).attr("class","panelssbjn");
            			
            			jQuery("#sliderList > div").not("eq("+(jQuery(this).index())+")").hide();
            			jQuery("#sliderList > div").eq(jQuery(this).index()).show();
            		});
            	});
				
				function viewContact() {
                    jQuery("#divSCA").dialog({
                    width:900,
            		height:780,
                    modal:true
                    });
            	}
            </script>
		</div>
		<div class="clear"></div>
	</div>
</div>
	
#parse("/common/zhtcert.vm")