<script>
	var btnsrh = new hb.tradelist.searchSlide();
	btnsrh.btnSearchch({
		tdlSearchType:"#tdlSearchType",
		tdlsearchTypeValue:"#tdlSearchTypeValue",
		tdlsearchKeyWords:"#tdlSearchKeyWords",
		tdlSearchKeyLabel:"#tdlSearchKeyLabel",
		tdlSearchKeySub:'#tdlSearchSub'
	});
	
	var lsBox = new hb.tradelist.mouseHover();
	lsBox.listBox({
		lsbox:".tdl_ls"
	});
	function deleteSearchCateogry(){
		var categoryCode = "$!{search.category}";
		if (categoryCode.length > 4) {
			categoryCode = categoryCode.substring(0,categoryCode.length-4);
		}
		jQuery("#searchCateogryDiv").remove();
		window.location="#springUrl('/trade/buy/index')--"+categoryCode+"--$!{search.keywords}.htm";
	}
</script>
