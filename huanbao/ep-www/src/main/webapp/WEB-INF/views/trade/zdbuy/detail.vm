<div id="divSCA2" class="connbox" style="display:none;"> 
  <ul>
  	<li><b>联 系 人：</b><span id="t_contacts"></span></li>
  	<li><b>职　　务：</b><span id="t_position"></span></li>
  	<li><b>手机号码：</b><span id="t_mobile"></span></li>
  	<li><b>电话号码：</b><span id="t_phone"></span></li>
  	<li><b>传真号码：</b><span id="t_fax"></span></li>
	<li><b>邮   箱：</b><span id="t_email"></span></li>
  	<li><b>公司网址：</b><span id="t_domain"></span></li>
  </ul>
</div>
<script type="text/javascript">
function viewContact(id) {
	if(jQuery("#loginstatus").val()=="1"){
		jQuery.ajax({
		    url:'#springUrl('/trade')/zdbuy/viewBuyContacts.htm',
		    data:{"id":id},
		    cache:false,
		    dataType:"json",
		    type:"get",
			async:false,
		    success:function(req){
		            if(req.success){
						jQuery("#t_contacts").html(req.data.contact + req.data.sex);
						jQuery("#t_position").html(req.data.position);
						jQuery("#t_mobile").html(req.data.mobile);
						jQuery("#t_phone").html(req.data.phone);
						jQuery("#t_fax").html(req.data.fax);
						jQuery("#t_email").html(req.data.email);
						jQuery("#t_domain").html(req.data.domain);
                		jQuery("#divSCA2").dialog({
                			width:500,
                			modal:true
                		});
		            } else {
                		jQuery("#divSCA").dialog({
                			width:500,
                			modal:true
                		});
					}
		        },
		    failure:function(){
				hb.util.Message.show({
			        msg:"获取数据失败！",
			        autoClose:10000
				 });
		    }
		});

	} else {
		var loginbox=new Asto.util.PopupBox({
	  		url:"$!{address.myesite}/common/loginMini.htm",
	  		destUrl:"#!{address.www}/submitCallback.htm",
	  		callbackFn:function(success, data){
	  			loginbox.close();
	  			jQuery("#loginstatus").val("1");
	 		},
	  		width:510,
	  		height:400
  		});
	  	loginbox.show();
	}
}

</script>