 <script language="javascript">
 jQuery(document).ready(function(){
    // 地区下拉框初始化
	var _selectAreaCode=["#provinceCode"];
	var selectAreaCode=new hb.util.Selector({
		selects:_selectAreaCode,
		url:"#springUrl('/trade')/getAreaCode.htm",
		field:{code:"code",label:"name"}
	});
	selectAreaCode.init({
		rootCode:"10011000",
		#if(!$!{search.region}) 
			initCode:"10011000"
		#else
			initCode:"$!{search.region}"
		#end
	});

});
function changeRegion(){
	window.location="#springUrl('/trade/buy/list')"+"--$!{search.keywords}--$!{search.group}--"+jQuery("#provinceCode").val()+"--$!{search.time}--$!{search.showStyle}--$!{page.sort}--$!{page.dir}"+"--s0--l$!{page.limit}.htm";
}
function changeSort(){
	window.location="#springUrl('/trade/buy/list')"+"--$!{search.keywords}--$!{search.group}--$!{search.region}--$!{search.time}--$!{search.showStyle}--"+jQuery("#searchSort").val()+"--$!{page.dir}"+"--s0--l$!{page.limit}.htm";
}
function changeDay(){
	window.location="#springUrl('/trade/buy/list')"+"--$!{search.keywords}--$!{search.group}--$!{search.region}--"+jQuery("#searchTime").val()+"--$!{search.showStyle}--$!{page.sort}--$!{page.dir}"+"--s0--l$!{page.limit}.htm";
}

</script>