#cacheFragment("$!{address.fragment}/fragment/trade/hotSupply.htm?keywords=$!{search.encodeKeywords}&category=$!{search.category}&limit=6", "", "", "600")
<aside class="tdl_hotrecom margintop8 borderwhitegray html5radius">
 	<header class="tdl_hr_t"><h3 class="tdl_hr_th">热门推荐</h3><span class="tdl_hr_tr"><a href="$!{address.exhibit}">热门展会推荐</a></span></header>
    <ul class="tdl_hr_ls">
		#foreach($listrm in $!{list})
		<li>
			<figure class="tdl_hr_box">
            	<p>
            		<a href="$!{address.esite}/detail$!{listrm.supply.id}.htm">
            		#if("$!{listrm.supply.photoCover}"=="")
        				<img  src="$!{address.img}/huanbao/images/trade/tradelist/noprod.gif" class="tdl_hrb_img" alt="$!{listrm.supply.title}"/>
            		#else
            			<img src="$!{address.thumb}$!{address.resource}$!{listrm.supply.photoCover}&width=200&height=200" class="tdl_hrb_img" alt="$!{listrm.supply.title}"/>
            		#end
            		</a>
            	</p>
                <figcaption class="tdl_hrb_t">
                	<p class="tdl_hrb_title"><a href="$!{address.esite}/detail$!{listrm.supply.id}.htm" target="_blank" title="$!{listrm.supply.title}"> #printTitle($!{listrm.supply.title} 7 '')</a></p>
                    <p class="tdl_hrb_price">
                    <span class="fontorange fontbold">
						#if("$!{listrm.supply.priceNum}"=="" || "$!{listrm.supply.priceNum}"=="0")
                    		面议
                    	#else
                    		$!{listrm.supply.priceNum}
                    		#if("$!{listrm.supply.priceUnits}"=="")
                    		元
                    		#else
                    		$!{listrm.supply.priceUnits}
                    		#end
                    	#end
                    </span>
                    </p>
                    <p class="tdl_hrb_link"><a href="$!{address.esite}/companyContact$!{listrm.supply.cid}.htm">联系方式</a></p>
                </figcaption>
            </figure>
        </li>
		#end
    </ul>
	<div class="clear"></div>
 </aside>
#end