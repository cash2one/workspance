<script src="http://img0.huanbao.com/huanbao/www/js/search.js"></script>

<script type="text/javascript" >
  	if($!{show}==1){
		Asto.util.Message.show({
			msg:"你对技术文章留言成功！",
			autoClose:5000
		});
	}  
  jQuery(document).ready(function(){
     jQuery("#sendMsgBtn").click(function(){
	 jQuery.ajax({
		    type:"post",
			url:"/compnews/technicalarticles/ajaxUser.htm",
			dataType:"json",
			cache:false,
			success:function(data){
				if(data.success==true){
				    jQuery("#loginstatus").val("1")
				}else{
				    jQuery("#loginstatus").val("0")
				}
             if(jQuery("#title").val()=="" || jQuery("#title").val()=="请输入内容"){
    		   jQuery("#title").blur();
    		   return false;
    		 }else if( jQuery("#details").val()=="" || jQuery("#details").val()=="请输入内容"){
    		   jQuery("#details").blur();
    		   return false;
    		 }else if(jQuery("#loginstatus").val()!="1"){
    		    var loginbox=new Asto.util.PopupBox({
        		  		url:"#springUrl('/compnews/technicalarticles/loginMini.htm')",
        		  		destUrl:"$!{address.www}/submitCallback.htm",
        		  		callbackFn:function(success, data){
        		  			loginbox.close();
        		  			jQuery("#loginstatus").val("1");
        					jQuery("#messageForm").submit();
        		 		},
    					modal:true,
    					title:"请先登录后再在留言",
        		  		width:800,
        		  		height:500
        	  		});
        		  	loginbox.show();
    		 }else{
    		   
    		    jQuery("#messageForm").submit();
    		 }
			} 
	   	})
    });
 });
	 
		function qukTechnicalArticles(id){
		   
		    jQuery(".loginView").click(function(){
				if(jQuery("#loginstatus").val()!="1" ){
        			var loginbox=new Asto.util.PopupBox({
            			url:"$!{address.myesite}/common/loginMini.htm",
            	  		destUrl:"$!{address.www}/submitCallback.htm",
            	  		callbackFn:function(success, data){
            	  			loginbox.close();
							Asto.util.Message.show({
                				msg:"登录成功,正在重新载入页面,请稍候...",
                				autoClose:10000
                			});
							window.location.reload();
            	 		},
						modal:true,
        				title:"请先登录后再查看联系方式",
            	  		width:510,
            	  		height:400
              		});
            	  	loginbox.show();
        		}
			});
		}
			
	
	</script>
