#set($layout="/layout/compnews/default.vm")

<link rel="stylesheet" type="text/css" href="http://img0.zz91.com/front/css/zz91.base.css"/>
<link rel="stylesheet" type="text/css" href="http://img0.zz91.com/huanbao/www/jishu/css/JiShuZhongXin.css"/>


<div class="main">
    <div class="mainblock2">
		<section class="hb_positionleader"> 
            <a href="$!{address.www}">环保网</a> 
            &gt; 
            <a href="$!{address.news}">技术中心</a>
            &gt;       
            关键字：$!{keywords}
        </section>
    	<div class="left">
        	<div class="LieBiaoYe">
				#foreach($l in ${page.records})
            	<div class="list">
					
                	<div class="list_zi1">
                    	<span class="zi6">
                        	<a href="#springUrl('/compnews/technicalarticles/details')$!{l.compNews.id}.htm">#printTitle($!{l.compNews.title} 5 "")</a>
                        </span>
						#if($!{l.memberCode}=='10011001')
                        <img src="http://img0.zz91.com/huanbao/www/jishu/images/icon.jpg" class="i1" />
                        #end
                    </div>
                    <!--end list_zi1-->
                    <div class="list_zi2">
                    	    <a href="#springUrl('/compnews/technicalarticles/details')$!{l.compNews.id}.htm">#printTitle($!{l.compNews.details} 10 " ")</a>
                    </div>
                    <!--end list_zi2-->
                    <div class="list_zi3">
                    	<span class="zi10">
                        	<a href="$!{address.esite}/index$!{l.compNews.cid}.htm">#printTitle($!{l.compName} 5 " ")</a>
                        </span>	
                        <span class="zi7">
                        	 #printFragmentDate("yyy-MM-dd" $!{l.compNews.gmtPublish})
                        </span>
                    	<span class="zi34">
                        	游览量：$!{l.compNews.viewCount} 
                        </span>
                        
                    </div>
                    <!--end list_zi3-->
                    <div class="list_img">
                    ##	<img src="http://img0.zz91.com/huanbao/www/jishu/images/img1.jpg" class="i2"/>
                        <span class="zi8">
                        	标签：<a>$!{l.compNews.tags}</a>
                        </span>
                    </div>
                    <!--end list_img-->
                    <div style="clear:both"></div>
                </div>
				#end
                <!--end LieBiaoYe list-->
                <div class="page">
                	#staticPageNavs(${page} "#springUrl('/compnews/technicalarticles/tagsList')" "--$!{keywords}" "")
                </div>
                <!--end page-->
                <div style="clear:both"></div>
            </div>
            <!--end LieBiaoYe-->
        </div>
        <!--end mainblock2 left-->
        <div class="right">
        	<div class="item">
            	<div class="title">
                	<a href="#">最新产品</a>
                </div>
                <div class="content">
					#cacheFragment("$!{address.fragment}/fragment/trade/newestSupply.htm?size=10&su","","","600")
                	<ul class="u2">
                    	#foreach($l in $!{list})
                    	<li><a href="$!{address.trade2}/supply/detail$!{l.id}.htm">·#printTitle($!{l.title} 18 "")</a></li>
         			    #end
                    </ul>
					#end
                </div>
            </div>
            <!--mainblock2 right item-->
            <div class="item">
            	<div class="title">
                	<a href="#">推荐求购信息</a>
                </div>
                <div class="content">
                  #cacheFragment("$!{address.fragment}/fragment/trade/recommendBuy.htm?size=7&wwwIndex","","","600")
					<ul class="u2">
						#foreach($l in $!{list})
                    	<li><a href="$!{address.trade}/buy/detail$!{l.id}.htm">·#printTitle($!{l.title} 18 "")</a></li>
                       #end
					</ul>
				 #end	
                </div>
            </div>
            <!--mainblock2 right item-->
            <div class="item" style="border-bottom:none">
            	<div class="title">
                	<a href="#">市场行情</a>
                </div>
                <div class="content">
					#cacheFragment("$!{address.fragment}/fragment/news/categoryNews.htm?categoryCode=10001002&size=5&oue","","","600")
					<ul class="u2">
						#foreach($l in $!{list})
                    	 <li><a href="$!{address.news}/details.htm?id=$!{l.id}">#printTitle($!{l.titleIndex} 19 "")</a></li>
                        #end
					</ul>
					#end
                </div>
            </div>
            <!--mainblock2 right item-->
        </div>
        <!--end mainblock2 right-->
    </div>
    <!--end mainblock2-->
</div>
<!--end main-->

