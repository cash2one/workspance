                    	 $!{news.title}
                    </div>
                    <div class="td-content-date">
                    	$!date.format('yyyy年MM月dd日',$!{news.gmtPublish}) <span class="zi13"></span>浏览量:${news.viewCount}
                    </div>
                    <div class="td-content-content">
                    	    $!{news.details}
                    </div>
                    <div class="td-content-page">
                    	<div class="td-page-up"><a href="#springUrl('/compnews/technicalarticles/newsDetails')$!{onNews.id}.htm">#if("$!{onNews.id}"!="")上一篇：#printTitle($!{onNews.title} 20 "")#end</a></div>
                        <div class="td-page-down"><a href="#springUrl('/compnews/technicalarticles/newsDetails')$!{downNews.id}.htm">#if("$!{downNews.id}"!="")下一篇：#printTitle($!{downNews.title} 20 "")#end</a></div>
                    </div>
		</div>
        <div style="clear:both"></div>
        <div class="td-message">
		  <form id="messageForm" method="post" action="$!{address.myesite}/message/sendInquiry.htm">
        	<div class="td-message-LiuYan">
            	留言
            </div>
            <div class="td-message-LiuYan_title">
            	<span class="LiuYan-title">
                	标<span class="LiuYan-space"></span>题:
                </span>
                <span class="LiuYan-text">
                	<input type="text" class="text" name="title" id="title" value="我对 $!{news.title} 感兴趣"/>
                </span>
            </div>
            <div style="clear:both"></div>
            <div class="td-message-LiuYan_title">
            	<span class="LiuYan-title">
                	主要内容:
                </span>
                <span class="LiuYan-text">
                	<textarea name="details" cols="" class="text1" rows="" id="details"></textarea>
                </span>
            </div>
            <div style="clear:both"></div>
			
			<input id="sendMsgBtn" type="button"   value="提交留言" style="margin-left:7cm;margin-top:10px;">
            <input type="hidden" name="targetId" value=" $!{news.id}"/>
