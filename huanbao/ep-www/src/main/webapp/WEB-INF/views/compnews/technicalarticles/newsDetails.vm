				#foreach($l in $!{list})
            	<li><a href="$!{address.trade2}/supply/detail$!{l.id}.htm">·#printTitle($!{l.title} 15 "")</a></li>
				#end
            </ul>
			#end
        </div>
      </div>
      <div class="m2-right-item">
        <div class="m2-right-title">
            	<a href="$!{address.trade}/newb.htm">推荐求购信息</a>
        </div>
         <div class="m2-right-content">
			#cacheFragment("$!{address.fragment}/fragment/trade/recommendBuy.htm?size=7&wwwIex","","","600")
            <ul>
    			#foreach($l in $list)
                <li><a href="$!{address.trade}/buy/detail$!{l.id}.htm">·#printTitle($!{l.title} 15 "")</a></li>
                #end
			</ul>
			#end
          </div> 
        </div>
		<div class="m2-right-item" style="border-bottom:none">
        	<div class="m2-right-title">
            	<a href="${address.news}/list10001002.htm">市场行情</a>
            </div>
            <div class="m2-right-content">
				#cacheFragment("$!{address.fragment}/fragment/news/categoryNews.htm?categoryCode=10001002&size=7&oue","","","600")
            	<ul>
					#foreach($l in $!{list})
                	<li><a href="$!{address.news}/details.htm?id=$!{l.id}">·#printTitle($!{l.titleIndex} 15 "")</a></li>
                   #end
				</ul>
				#end
           </div>
      </div>
    </div>
    <!--end 技术文章详情页 right-->
</div>
