<div class="TechnicalDetails">
	#parse("/common/compnews/menu.vm")
	<div class="td-left">
    	<div class="td-left-title">
        	<span class="td-Zuo">
            	正文
            </span>
            <span class="td-You">
            	<a href="#springUrl('/compnews/technicalarticles/publish.htm')">发布技术文章</a>
