#cacheFragment("$!{address.fragment}/fragment/page/header.htm?ik=index", "", "", "")
    $!{fragmentContext}
#end


<article class="hb_login">
<script type="text/javascript">
/*960*60，创建于2012-9-5*/
var cpro_id = "u1050274";
</script>
<script src="http://cpro.baidustatic.com/cpro/ui/c.js" type="text/javascript"></script>
	<section class="hb_login_theme"><script type="text/javascript" src="http://gg.zz91.com/show?p=173"></script></section>
    <section class="hb_login_form">
    	<div class="hb_login_box">
            <form id="hblogin" action="#springUrl('/doLogin.htm')" method="post">
            	<div id="loginMsgDiv">$!{error}</div>
                <div class="lgf_items">
                    <div class="lgf_label">
                        <label for="iptusername">用户名:</label>
                    </div>
                    <div class="lgf_ipt">
                        <input type="text" name="username" class="iptusername" id="iptusername">
                    </div>
                </div>
                
                <div class="lgf_items">
                    <div class="lgf_label">
                        <label for=""><span class="paddingright1em">密</span>码:</label>
                    </div>
                    <div class="lgf_ipt">
                        <input type="password" name="password" class="iptpassword" id="iptpassword">
                    </div>
                </div>
                <div class="lgf_items lgf_items_rps">
                    <input type="hidden" name="refurl" value="$!{refurl}" >
                    <input type="checkbox" class="saveCookie">
                    <label class="rembpswordlbl" for="rembpassword">记住密码</label>
					<a href="${address.www}/user/find_pwf.htm">忘记密码</a>
              </div>
                
                <div class="lgf_items lgf_items_sub">
                    <input type="submit" value="登 录" class="loginsub"/><span class="forgetpsw">
							##<a href="#" target="_blank" title="点击找回密码">忘记密码?</a>
					</span>
                </div>

                <div class="lgf_items lgf_items_info">
                    <p><span class="fontorange fontbold">提示：</span>您还不是中国环保网会员。点击<a href="$!{address.myesite}/regist.htm" class="regnow" ref="nofollow">免费注册</a>与20万商家共同谈生意，交朋友。</p>
                </div>
            </form>
			
            ##<div class="logintype">
             ##       <div class="loginQQ"><a href="#">用QQ号码登录</a></div>
             ##       <div class="loginweibo"><a href="#">用微博账号登录</a></div>
              ##  </div>
            <div class="clear"></div>
       	</div>
    </section>
    <div class="clear"></div>
</article>

<!----------footer start------->
#cacheFragment("$!{address.fragment}/fragment/page/footer.htm", "", "", "")
  $!{fragmentContext}
#end

<script>
	jQuery('document').ready(function(){
		jQuery('#hblogin').validate({
			rules:{
				username:{required:true,rangelength:[4,50]},
				password:{required:true,rangelength:[6,40]}
			},
			messages:{
				username:{required:'请输入用户名',rangelength:'用户名为4-50个英语字符和数字组合'},
				password:{required:'请输入密码',rangelength:'您的密码至少有6个字符'}
			},
			submitHandler:function(form){
				form.submit();
			}
		})
	});
</script>

</body>
</html>
