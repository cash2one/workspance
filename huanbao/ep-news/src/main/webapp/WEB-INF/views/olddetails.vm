#set($layout="/layout/default.vm")
<!--main leader start-->
<section class="hb_positionleader"> 
	<a href="$!{address.www}">环保网</a> 
	&gt; 
	<a href="$!{address.news}">资讯中心</a>
	&gt; 
	<a href="$!{address.news}/list$!{news.categoryCode}.htm" target="_blank" >$!{category}</a>
	&gt;
	<a href="$!{address.news}/details$!{news.id}.htm">$!{news.title}</a>
	
</section>
<!-- main header end-->

<!--news center details main block start-->
<section class="hb_mainblock">
	<!--左部信息板块 start-->	
    <div class="contblock_698 floatleft">
		<!--文章详情 start-->
        <article class="contblock_698 nd_details html5radius">
            <h1 class="tit">
				##<a href="$!{address.news}/details$!{news.id}.htm">
					$!{news.title}
				##</a>
			</h1>
            #if($!{epAuthUser})
				<input type="hidden" id="loginstatus" value="1" />
			#else
				<input type="hidden" id="loginstatus" value="0" />
            #end
           	<div class="nd_details_info">
            	<span class="nd_article_from">
					#set($website = "#printTitle($!{news.newsSourceUrl} 7 '')")
    				#if($website!="http://")
    					#set($website ="http://"+$!{news.newsSourceUrl})
    				#else
    					#set($website =$!{news.newsSourceUrl})
    				#end
					信息来源:<a href="$!{website}" target="_blank">$!{news.newsSource}</a>
				</span>
                <span class="nd_article_date">发表时间:$!date.format('yyyy年MM月dd日',$!{news.gmtPublish})</span>
                <span class="nd_article_views">阅读次数:${news.viewCount}</span>
                <span class="nd_article_views">
					(<a href="$!{address.www}">中国环保网</a>www.huanbao.com)</span>
            </div>
            <div class="nd_details_tip">
            	<p>
					<font class="fontorange fontbold">核心提示：</font>
					$!{news.description}
				</p>
            </div>
			#if($!{videoContent})
			<div class="nd_details_info">
				## 视频地址
				$!{videoContent}
			</div>
			#end
            <div class="nd_details_content">
				${news.details}
			</div>
            
            <div class="nd_details_articlejump">
            	<span class="article_previous">#if("$!{onNews.id}"!="")上一篇:<a href="#springUrl('/details')$!{onNews.id}.htm" >#printTitle($!{onNews.title} 20 "")</a>#end</span>
                <span class="article_next">#if("$!{downNews.id}"!="")下一篇:<a href="#springUrl('/details')$!{downNews.id}.htm" >#printTitle($!{downNews.title} 20 "")</a>#end</span>
                <div class="clear"></div>
            </div>
			
			<aside class="nd_details_sm">
				<div class="banquan">
					<em class="fontbold fontred">版权与免责声明：</em><br>
