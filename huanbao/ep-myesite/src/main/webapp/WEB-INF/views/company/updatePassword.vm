#set($layout="/layout/defaultS.vm")
<div class="container mt clearfix">
	<div class="grid_12">
        <ul class="breadcrumb">
			<li><a href="#">修改密码</a></li>
		</ul>
		
		#if($!{msg})
    	<div class="alert alert-info">
        	<a onclick="return false;" target="_blank">$!{msg}</a>
        </div>
		#end
		
		<div class="well mt">
    		<form id="pwdForm" method="post" action="#springUrl('/company/doUpdatePassword.htm')">
			<input id="id" name="id" type="hidden" value="$!{account.id}"/>
			<div class="well-head">修改账户密码(打<span class="red">*</span>为必填项)</div>
			<div class="well-content">
					<div class="control-group">
                        <label class="control-label">
    						<span class="red">*</span> 旧密码：
    					</label>
                        <div class="controls">
        					<input id="password" name="password" type="password" class="field input-xlarge validate[required,minSize[6],maxSize[40]]"/>
							<span class="grey">当前使用的密码</span>
                        </div>
        		    </div>
					
					<div class="control-group">
                        <label class="control-label">
    						<span class="red">*</span> 新密码：
    					</label>
                        <div class="controls">
        					<input id="newPassword" name="newPassword" type="password" class="field input-xlarge validate[required,minSize[6],maxSize[40]]"/>
							<span class="grey">修改后的新密码</span>
						</div>
        		    </div>
					
					<div class="control-group">
                        <label class="control-label">
    						建议:
    					</label>
                        <div class="controls">
							<label class="checkbox red">
							采用容易记的，难猜的数字英文组合密码必须是6-20个字符，只允许英文和数字，区分大小写
                            </label>
                        </div>
        		    </div>
					
					<div class="control-group">
                        <label class="control-label">
    						<span class="red">*</span> 确认密码：
    					</label>
                        <div class="controls">
							<input id="confPassword" name="confPassword" type="password"  class="field input-xlarge validate[required,minSize[6],maxSize[40],equals[newPassword]]"/>
							<span class="grey">新密码确认</span>
						</div>
        		    </div>
					
		            <div class="form-actions">
                        <input type="submit" id="submitBtn" class="btn btn-primary" value="保存新密码">
                    </div>
            </div>
    		</form>
        </div>
    </div>
</div>
#parse("/common/importValidate.vm")
<script>
    jQuery('document').ready(function(){
		myrc.select("Js_select");
		myrc.menu(1, 6);
		jQuery("#pwdForm").validationEngine("attach");
    });
</script>