#set($layout="/layout/defaultS.vm")
<div class="container mt clearfix">
	<div class="grid_12">
        <ul class="breadcrumb">
			<li><a href="#">主营管理</a></li>
		</ul>

		#if($!{msg})
    	<div class="alert alert-info">
        	<a onclick="return false;" target="_blank">$!{msg}</a>
        </div>
		#end
		
		<div class="well mt">
			 <form id="updateMainForm" action="#springUrl('/company/doUpdateMainProduct.htm')" method="post">
				<div class="well-head">修改公司主营业务</div>
					<div class="well-content">
						<div class="control-group">
                            <label class="control-label">
                                主要经营产品：
                            </label>
                            <div class="controls">
								<input name="mainProductSupply" type="text" class="field input-xxlarge validate[maxSize[50]]" id="mainProductSupply" value="$!{compProfile.mainProductSupply}" />
                            </div>
						</div>
						
						<div class="control-group">
                            <label class="control-label">
                                主要求购产品：
                            </label>
                            <div class="controls">
								<input name="mainProductBuy" type="text" class="field input-xxlarge validate[maxSize[50]]" id="mainProductBuy" value="$!{compProfile.mainProductBuy}" />
                            </div>
						</div>
						
						<div class="form-actions">
                            <input type="submit" id="submitBtn" class="btn btn-primary" value="保存主营业务">
                        </div>
						
					</div>
              </form>
		</div>
	</div>
</div>

#parse("/common/importValidate.vm")
<script type="text/javascript">
	jQuery(document).ready(function(){
		myrc.select("Js_select");
		myrc.menu(8, 1);
		
		jQuery("#updateMainForm").validationEngine("attach");
	});
</script>