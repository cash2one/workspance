#set($layout="/layout/defaultS.vm")

## page title
<section class="container mt" >
    <ul class="breadcrumb">
        <li><strong>相册管理</strong></li>
    </ul>
</section>
#if("$!{success}"!="")
<section class="container">
    <div class="alert alert-info">
        
    #if("$!{success}"=="-1")
        您刚创建了一个相册
    #end
    #if("$!{success}"=="-2")
        您刚更新了相册信息
    #end
    #if("$!{success}"=="-3")
        您刚删除了一个相册
    #end
    </div>
</section>
#end

## part A: default album
<section class="container mt well">
    <div class="well-head">系统相册</div>
    <div class="well-content clearfix">

        #foreach($album in $!{sysAlbum})
        <div class="upload-wrap">
            <a href="#springUrl('/photoalbum/list.htm')?id=$!{album.photoAlbum.id}" >
                <img src="$!{address.resource}$!{album.photoCover}" width="100" height="100" />
                <p>$!{album.photoAlbum.name} (<span class="red" >$!{album.photoNum}</span>)</p>
            </a>
        </div>
        #end
    </div>
</section>

## part B: user album
<section class="container mt well">
    <div class="well-head">用户相册</div>
    <div class="well-content">

        <div>
            <a href="#springUrl('/photoalbum/create.htm')" class="btn btn-small" >创建相册</a>
        </div>
        <div class="clearfix">
            #foreach($album in $!{userAlbum})
            <div class="upload-wrap">
				<a href="#springUrl('/photoalbum/list.htm')?id=$!{album.photoAlbum.id}">
					<img src="$!{address.resource}$!{album.photoCover}" width="100" height="100" />
					<p>
						$!{album.photoAlbum.name} (<span class="red" >$!{album.photoNum}</span>)
					</p>
					<div class="btn-group">
						<a class="btn btn-mini" href="#springUrl('/photoalbum/update.htm')?id=$!{album.photoAlbum.id}" >修改</a>
						<a class="btn btn-mini" href="#springUrl('/photoalbum/remove.htm')?id=$!{album.photoAlbum.id}" onclick="return confirm('相册删除后原相册的图片将被放入未分类相册内，您确定要删除相册吗？');" >删除</a>
					</div>
				</a>
            </div>
            #end
        </div>
    </div>
</section>
<script type="text/javascript" >
	jQuery(document).ready(function(){
		myrc.select("Js_select");
		myrc.menu(5, null);
	});
</script>



