#set($layout="/layout/defaultS.vm")
<div class="container mt clearfix">
	<div class="grid_12">
		<ul class="breadcrumb">
			<li><a href="#springUrl('/supply/index.htm')">产品管理</a><span class="divider">/</span></li>
			<li>管理供应信息</li>

		</ul>

		<div class="well mt">
				<div class="well-head">供求标题-<a href="$!{address.esite}/details$!{supply.id}.htm">$!{supply.title}</a></div>
				<div class="well-content">
					
					<dl class="info-wrap">
						<dt>供求信息:</dt>
						<dd>
							$!{supply.detailsQuery}
						</dd>
					</dl>
					
					<dl class="info-wrap">
						<dt>刷新时间:</dt>
						<dd>
							$!date.format('yyyy-MM-dd HH:mm:ss',$!{supply.gmtRefresh})
						</dd>
					</dl>
				</div>
		</div>
		<div class="well mt">
			<ul class="breadcrumb">
				<li>用户留言信息如下</li>
			</ul>
		</div>
		<div class="well mt">
		<table class="table table-bordered table-condensed">
			<thead>
					<tr>
						<th width="150" class="tac">标题名称</th>
						<th >留言内容</th>
						<th width="200" class="tac">留言时间</th>
						<th width="200" class="tac">留言公司</th>
						<th width="50" class="tac">操作</th>
					</tr>
				</thead>
				<tbody>
					#if(!$!{page.records} || $!{page.records.size()}==0)
					<tr >
						<td colspan="5">
							<div class="alert alert-error center" >
								<strong>注意：</strong>
									很抱歉，您还没有关于$!{supply.title}的留言信息
							</div>
						</td>
					</tr>
					#end
					
					#foreach($messageDto in $!{page.records})
					<tr id="records$!{messageDto.message.id}">
						<td class="va">
							$!{messageDto.message.title}
						</td>
						
						<td class="va">
							$!{messageDto.message.details}
						</td>
						
						<td class="tac va">$!date.format('yyyy-MM-dd HH:mm:ss',$!{messageDto.message.gmtCreated})</td>

						<td class="tac va">
							<a href="$!{address.esite}/index$!{messageDto.message.cid}.htm">$!{messageDto.cname}</a>
						</td>
						<td class="tac va"> 
							<a href="javascript:deleteMessage($!{messageDto.message.id})">删除</a> 
						</td>
					</tr>
					#end
				</tbody>
			</table>
		</div>
		#myrcPageNav($!{page} "#springUrl('/supply/message.htm')" "id=$!{supply.id}" "")
	</div>
</div>
<script type="text/javascript">
	jQuery(document).ready(function(){
		myrc.select("Js_select");
		myrc.menu(2, 2);
	});

function deleteMessage(id){
	if(confirm("确认删除信息?")){
		jQuery.ajax({
			url:'$!{address.myesite}/message/delete.htm',
			data:{"id":id,"type":1},
			cache:false,
			dataType:"json",
			success:function(req){
				if(req.success){
					jQuery("#records"+id).remove();
				}
			},
			failure:function(){
			}
		});
	}
}
</script>