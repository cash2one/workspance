                <label class="control-label">
                    用户名：
                </label>
                <div class="controls">
                    <input type="text" name="account" class="field input-medium" id="iptusername">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">
                    密码：
                </label>
                <div class="controls">
                    <input type="password" name="password" class="field input-medium" id="iptpassword">
