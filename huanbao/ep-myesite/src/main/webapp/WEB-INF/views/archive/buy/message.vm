#set($layout="/layout/default.vm")
<table width="1000" border="0" align="center" cellpadding="0" cellspacing="0">
  <tr>
    <td width="197" valign="top" bgcolor="#128fc4"><table width="100%" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <td><img src="$!{address.img}/huanbao/images/myesite/producttitle.jpg" width="197" height="75" /></td>
      </tr>
      <tr>
        <td>&nbsp;</td>
      </tr>
    </table>
      <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
          <td>
          <div style="padding-left:20px;">
           <ul>
            <li class="hbnyleft"><a href="$!{address.myesite}/supply/publish_StpOne.htm" target="_blank">发布供应信息</a></li>
            <li class="hbnyleft"><a href="$!{address.myesite}/supply/supply.htm">管理供应信息</a></li>
            <li class="hbnyleft"><a href="$!{address.myesite}/supply/tradeGroup.htm">管理供应信息类别</a></li>
            <li class="hbnyleft"><a href="$!{address.myesite}/buy/publish_StpOne.htm" target="_blank">发布求购信息</a></li>
            <li class="hbnylefts"><a href="$!{address.myesite}/buy/buy.htm">管理求购信息</a></li>
           </ul>
          </div>
          </td>
        </tr>
    </table></td>
    <td valign="top" class="hbnycon"><table width="100%" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <td class="hbnytit">查看求购信息留言</td>
      </tr>
    </table>
    <table id="supplyDiv$!{buy.id}" width="90%" border="0" align="center" cellpadding="0" cellspacing="1" bgcolor="#98dcfb" class="hbnylylist">
        <tr>
          <td bgcolor="#FFFFFF">
          <div class="hbnycpname">
	          <ul>
	          <li class="hbnycptit">
	          <font color="#FF0000">
	          <a href="$!{address.esite}/detail$!{buy.id}.htm" target="_blank" class="ofm_title fontred">#printTitle($!{buy.title} 16 "")</a>
	          </font>&nbsp;&nbsp;&nbsp;&nbsp;刷新时间：$!date.format('yyyy-MM-dd',$!{buy.gmtRefresh})&nbsp;&nbsp;有效期：
	          <font color="#FF0000">$!{buy.validDays}天</font>&nbsp;&nbsp;评分：<font color="#FF0000">$!{buy.integrity}</font></li>
	          <li class="hbnycpcon">#printTitle($!{buy.detailsQuery} 200 "")</li>
	          </ul>
          </div>
          <div style="width:150px; height:134px; float:right;">
            #if("$!{buy.photoCover}"=="")
				<img src="$!{address.img}/huanbao/images/global/noimagebig.gif" width="117" height="134"/>
			#else
				<img src="$!{address.thumb}$!{address.resource}$!{buy.photoCover}"&width=117&height=134" width="117" height="134"/>
			#end
          </div>
          </td>
        </tr>
    </table>
	#foreach($list in $!{page.records})
      <table id="messageDiv$!{list.message.id}" width="90%" border="0" align="center" cellpadding="0" cellspacing="1" bgcolor="#98dcfb" class="hbnylylist">
        <tr>
          <td bgcolor="#FFFFFF"><table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
              <td width="80" align="right" bgcolor="#f3fafd" style="color:#989797; border-bottom:dashed 1px #dfdede;">信息标题：</td>
              <td bgcolor="#f3fafd" style="color:#FF0000; border-bottom:dashed 1px #dfdede;">$!{list.message.title}</td>
              <td width="140" rowspan="2" align="center"><a href="javascript:deleteMessage('$!{list.message.id}')"><img src="$!{address.img}/huanbao/images/myesite/hbmem_28.jpg" width="56" height="22" /></a></td>
            </tr>
            <tr bgcolor="#f3fafd">
              <td align="right" valign="top" style="color:#989797;">留言内容：</td>
              <td>$!{list.message.details}</td>
              </tr>
          </table></td>
        </tr>
         #if($!{list.message.replyStatus} == 1 )
        <tr>
          <td bgcolor="#FFFFFF">
          <table id="replyDiv$!{list.message.id}" width="100%" border="0" cellspacing="0" cellpadding="0">
              <tr>
                <td width="80" align="right" valign="top" bgcolor="#f3fafd" style="color:#989797;">回复内容：</td>
                <td bgcolor="#f3fafd" style="line-height:22px; color:#989797;">$!{list.message.replyDetails}</td>
                <td width="140" align="center">&nbsp;</td>
              </tr>
          </table>
          </td>
        </tr>
        #end
    </table>
    #end
    <table width="90%" border="0" align="center" cellpadding="0" cellspacing="0">
        <tr>
          <td height="50">
		  	#myrcPageNav(${page} "#springUrl('/buy/message.htm')" "id=$!{buy.id}" "")
		  </td>
        </tr>
    </table></td>
  </tr>
</table>