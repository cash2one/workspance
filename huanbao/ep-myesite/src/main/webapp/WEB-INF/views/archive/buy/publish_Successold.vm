    </section>
	
    <section class="trade_pstbuytwo_below">
             <h3 class="tit">今日推荐其他卖家信息</h3>
              <ul> 
               #foreach($supply in $!{newestSupply})
               <li class="trade_pstbuytwo_below_li">
					<table>
						<tr>
							<td class="bkl_01"><a href="$!{address.esite}/detail$!{supply.supply.id}.htm" target="_blank"  class="fontblue">#printTitle($!{supply.supply.title} 22 "")</a></td>
							<td class="bkl_02">$!{supply.supply.province}$!{supply.supply.city}&nbsp</td>
							<td class="bkl_03">$!date.format('yyyy-MM-dd',$!{supply.supply.gmtRefresh})</td>
							<td class="bkl_04"><a href="$!{address.esite}/index$!{supply.supply.cid}.htm" target="_blank"  class="fontblue">$!{supply.comp.name}</a></td>
						</tr>
					</table>
              </li>
			   #end
			   <div class="clear"></div>
             </ul>
    </section>  
  
</div>