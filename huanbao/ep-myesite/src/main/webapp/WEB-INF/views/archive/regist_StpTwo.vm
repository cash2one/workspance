                    <div class="reg2i_input">
							<input type="text" value="86" name="phoneCountry" class="phoneCountry" id="reg2tel" maxlength="3">
							<input type="text" value="$!{account.phoneArea}" name="phoneArea" class="phoneArea" id="reg2tel" maxlength="4">
							<input type="text" value="$!{account.phone}" name="phone" class="phone" id="reg2tel">
					</div>
                </div>
                
                <div class="reg2_items">
                    <div class="reg2i_label"><label for="reg2faxCountry" class="reg2label">传真：</label></div>
                    <div class="reg2i_input">
						<input type="text" value="86" name="faxCountry" class="phoneCountry" id="reg2faxCountry" maxlength="3">
                        <label></label>
						<input type="text" value="$!{account.faxArea}" name="faxArea" class="phoneArea" id="reg2faxArea" maxlength="4">
						<input type="text" value="$!{account.fax}" name="fax" class="phone" id="reg2fax">
					</div>
                </div>
                
                <div class="reg2_items">
                    <div class="reg2i_label"><label for="reg2linkother" class="reg2label">其他联系方式：</label></div>
                    <div class="reg2i_input">
                    	#if(!$!{account.contact})<label for="reg2linkother" class="reg2linkotherlabel">QQ/MSN/微博</label> #end
                    	<input type="text" value="$!{account.contact}" name="linkother" class="reg2ipt" id="reg2linkother">
                    </div>
                </div>
                
                <div class="reg2_items">
                    <div class="reg2i_label"><label for="reg2department" class="reg2label">部门：</label></div>
                    <div class="reg2i_input"><input type="text" value="$!{account.dept}" name="department" class="reg2ipt" id="reg2department"></div>
                </div>
                
                <div class="reg2_items">
                    <div class="reg2i_label"><label for="reg2office" class="reg2label">职位：</label></div>
                    <div class="reg2i_input"><input type="text" value="$!{account.position}" name="office" class="reg2ipt" id="reg2office"></div>
                </div>
                <div class="clear"></div>
            </div>
            
            
            
            <div class="reg2_block reg2sub">
