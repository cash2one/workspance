						<select id="provinceCode" name="provinceCode" class="validate[required] reg2select"   id="reg2provinc" >
								<option value>省份</option>
						</select>
						<select id="areaCode" name="areaCode" class="validate[required] reg2select" id="reg2city">
							<option value>城市</option>
						</select>
                    </div>
                </div>
				
				<div class="reg2_items" id="industryChain">
                    <div class="reg2i_label"><label class="reg2label"><em class="fontorange"></em>产业链：</label></div>
                    <div class="reg2i_input" id = "industryChains">
						
                    </div>
					
					
                </div>
				
				<div class="reg2_items">
                    <div class="reg2i_label"><label for="reg2address" class="reg2label"><em class="fontorange">*</em>详细地址：</label></div>
                    <div class="reg2i_input" id="adrDetails">
                        <input type="text" value="$!{compProfile.address}" name="address" class="validate[required] reg2ipt" id="reg2address" >
                    </div>
                </div>
                <input id="userid" name="userid" type="hidden" value="$!{account.id}"/>
                <div class="reg2_items reg2_items_hover">
                    <div class="reg2i_label"><label for="reg2linkbody" class="reg2label"><em class="fontorange">*</em>联系人姓名：</label></div>
                    <div class="reg2i_input"><input type="text" name="linkname" class="validate[required,minSize[2]] reg2ipt" id="linkname" value="$!{account.name}" ></div>
                </div>
                <div class="reg2_items">
                    <div class="reg2i_label">&nbsp;</div>
                    <div class="reg2i_input">
                    	<input type="radio" value="0" name="sex" class="reg2sex" id="reg2sexman" #if($!{account.sex} != 1) checked #end/>
                        <label for="reg2sexman">先生</label>
                        <input type="radio" value="1" name="sex" class="reg2sex" id="reg2sexwoman" #if($!{account.sex} ==1) checked #end/>
                        <label for="reg2sexwoman">女士</label>
                    </div>
                </div>
                <div class="reg2_items">
                    <div class="reg2i_label"><label for="reg2industry" class="reg2label"><em class="fontorange">*</em>所处行业：</label></div>
                    <div class="reg2i_input">
                    	<select name="industryCode" class="validate[required] reg2select" id="reg2industry">
                        	<option value="">-----请选择-----</option>
	                         #foreach($list in $!{companyIndustry})
	                         <option value="$!{list.code}" #if("$!{list.code}"=="$!{compProfile.industryCode}") selected #end>$!{list.name}</option>
	                         #end
                        </select>
                    </div>
                </div>
				
                <div class="reg2_items">
                    <div class="reg2i_label"><label for="reg2product" class="reg2label"><em class="fontorange">*</em>
							#if("${compProfile.mainSupply}"=="1")
								主营产品：
							#else
								求购产品：
							#end
					</label></div>
                    <div class="reg2i_input">
						#if("${compProfile.mainSupply}"=="1")
