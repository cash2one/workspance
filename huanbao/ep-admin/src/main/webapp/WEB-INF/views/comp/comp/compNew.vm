#set($layout="/layout/defaultS.vm")
<script type="text/javascript" src="#springUrl('/app_2/comp/compNews.js')"></script>
<script type="text/javascript">
	Ext.onReady(function(){
		var mainGrid=Ext.create("com.zz91.ep.compNews.MainGrid",{
			region:"center"
		});
		
		mainGrid.getStore().setExtraParam("cid","$!{id}");
		mainGrid.getStore().load();
		
		Ext.create("Ext.container.Viewport",{
			layout:"border",
			items:[mainGrid]
		});
		
	});
</script>
