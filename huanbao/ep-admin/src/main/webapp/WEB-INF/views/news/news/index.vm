<script type="text/javascript" src="#springUrl('/app/news/category.js')" ></script>
<script type="text/javascript" src="#springUrl('/app/news/news.js')" ></script>
<script type="text/javascript">
Ext.onReady(function(){
	
	var recommendMenu=new Array();
	
	com.zz91.ep.news.FILTER_RECOMMEND.push({name : "全部类别",  value: ''});
	#foreach($rt in $!{recommendType.keySet()})
		com.zz91.ep.news.FILTER_RECOMMEND.push({
			name:"$!{recommendType.get($!{rt})}",
			value:"$!{rt}"
		});
		recommendMenu.push({
			text:"$!{recommendType.get($!{rt})}",
			handler:function(){
				com.zz91.ep.news.recommend("$!{rt}");
			}
		});
	#end
	
	var tree=new com.zz91.ep.category.TreePanel({
		id:CATEGORY.TREE,
		region:"west",
		width:200
	});
	
	var grid=new com.zz91.ep.news.grid({
		id:NEWS.COLLECTION_GRID,
		region:"center",
		recommendMenu:recommendMenu
	});
	
	var viewport=new Ext.Viewport({
		layout:"border",
		items:[tree,grid]	
	});
	
	tree.on('click',function(node,event){
		var code = node.attributes['data'];
		if(code!=""){
			grid.getStore().baseParams["categoryCode"]=code;
		}else{
			grid.getStore().baseParams["categoryCode"]=null;
		}
		grid.getStore().reload({params:{"start":0, "limit":Context.PAGE_SIZE}});
	});
})
</script>