<script type="text/javascript" >
	Ext.onReady(function(){
		var form = new com.zz91.ep.exhibit.Form({
			title:"编辑文章信息",
			region:"center",
			autoScroll:true
		});
		
		#if($!{id} && $!{id} > 0)
			form.loadRecord($!{id});
		#end
		
		var grid=new com.zz91.ep.exhibit.photoListGrid({
			id:EXHIBIT.FILE_GRID,
			title:"展会上传文件列表",
			columnWidth:1,
