<style>
	.imptContent {padding:20px;}
	.required {font-weight:bold;color:red;}
	.btn {font-size:18px; font-weight:bold;color:red;}
</style>
<script type="text/javascript" src="#springUrl('/app/trade/tradecategory/category.js')" ></script>
<script type="text/javascript" >
	
	function selectCategory(){
		var tree = new com.zz91.trade.category.TreePanel({
    		region:"center",
    		layout:"fit",
			contextmenu:null,
    		rootVisible:false
    	});
    	
    	tree.on("dblclick",function(node,e){
			Ext.get("categoryName").dom.innerText="选中类别："+node.text;
			Ext.get("categoryCode").dom.value=node.attributes["data"];
			node.getOwnerTree().ownerCt.close();
		});
    	
    	var win = new Ext.Window({
    		title:"选择类别",
    		width:400,
    		height:450,
    		layout:"border",
    		modal:true,
    		items:[tree]
    	});
		
		win.show();
	}
	
	function btntoggle(){
		Ext.get("imptbtn").dom.value="好了，剩下的我来搞定，亲，你可以喝咖啡去了";
		Ext.get("imptbtn").dom.disabled=true;
	}
</script>
<div class="imptContent">
<h3 >求购信息导入</h3>
<form action="#springUrl('/data/buy/impt.htm')" enctype="multipart/form-data" method="post" onsubmit="btntoggle();">
	<h4>Excel Index</h4>
