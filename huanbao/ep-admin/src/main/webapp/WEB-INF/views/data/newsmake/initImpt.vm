<style>
	.imptContent {padding:20px;}
	.required {font-weight:bold;color:red;}
	.btn {font-size:18px; font-weight:bold;color:red;}
</style>
<script type="text/javascript" src="#springUrl('/app/news/category.js')" ></script>
<script type="text/javascript" >
	
	function selectCategory(){
		var tree = new com.zz91.ep.category.TreePanel({
    		region:"center",
    		layout:"fit",
			contextmenu:null,
    		rootVisible:false
    	});
    	
    	tree.on("dblclick",function(node,e){
			Ext.get("categoryName").dom.innerText="选中类别："+node.text;
			Ext.get("categoryCode").dom.value=node.attributes["data"];
			node.getOwnerTree().ownerCt.close();
		});
    	
    	var win = new Ext.Window({
    		title:"选择类别",
    		width:400,
    		height:450,
    		layout:"border",
    		modal:true,
    		items:[tree]
    	});
		
		win.show();
	}
	
	function btntoggle(){
		Ext.get("imptbtn").dom.value="好了，剩下的我来搞定，亲，你可以喝咖啡去了";
		Ext.get("imptbtn").dom.disabled=true;
	}
</script>
<div class="imptContent">
<h3 >资讯信息导入</h3>
<form action="#springUrl('/data/newsmake/impt.htm')" enctype="multipart/form-data" method="post" onsubmit="btntoggle();">
	<h4>Excel Index</h4>
	<table border="0" cellpadding="2">
		<tr>
			<th>字段</th>
			<th>excel列（起始0）</th>
			<th>参考列</th>
		</tr>
		<tr>
			<td colspan="4"><hr /></td>
		</tr>
		<tr>
			<td class="required">类别选择</td>
			<td><input type="text" value="" name="categoryCode" id="categoryCode" onfocus="selectCategory();"/></td>
			<td colspan="2" id="categoryName"></td>
		</tr>
		<tr>
			<td colspan="4"><hr /></td>
		</tr>
		<tr>
			<td>标题</td>
			<td><input type="text" value="" name="title"/></td>
		</tr>
		<tr>
			<td>首页标题</td>
			<td><input type="text" value="" name="titleIndex"/></td>
		</tr>
		<tr>
			<td>文章导读</td>
			<td><input type="text" value="" name="description"/></td>
		</tr>
		<tr>
			<td>详细信息</td>
			<td><input type="text" value="" name="details"/></td>
		</tr>
		<tr>
			<td>标签(关键字)</td>
			<td><input type="text" value="" name="tags"/></td>
		</tr>
		<tr>
			<td>信息来源</td>
			<td><input type="text" value="" name="newsSource"/></td>
			<td></td>
		</tr>
		<tr>
			<td>来源地址</td>
			<td><input type="text" value="" name="newsSourceUrl"/></td>
			<td></td>
		</tr>
		<tr>
			<td>发布日期</td>
			<td><input type="text" value="" name="gmtPublish"/></td>
			<td>格式:xxxx-xx-xx或xx年xx月xx日</td>
		</tr>
		<tr>
			<td colspan="4"><hr /></td>
		</tr>
	</table>
	
	<h4 >Excel文件</h4>
	<div><input type="file" name="excel" /></div>
	<br/>
	<div><input type="submit" id="imptbtn" name="importexcel" value="填写正确，一定要要填写正确（否则会有怪兽哦），然后猛击这里！！！" class="btn" /></div>
</form>
</div>
