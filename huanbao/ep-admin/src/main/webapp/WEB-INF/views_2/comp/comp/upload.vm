#set($layout="/layout/defaultS.vm")
<script type="text/javascript" src="#springUrl('/app_2/util.js')"></script>
<script type="text/javascript" src="#springUrl('/app_2/comp/uploadImg.js')"></script>
<input type="hidden" id="tid" value="$!{id}"/>
<script type="text/javascript">
	Ext.onReady(function(){
		var form=Ext.create("com.zz91.ep.compImg.UploadForm",{
			region:"center",
			columnWidth:1,
			title:"上传公司logo或荣誉证书",
			height:100
		});
		
		form.loadTargertId("$!{id}");
		
		var grid=Ext.create("com.zz91.ep.compImg.LogoGrid",{
			id:IMG.LOGO_GRID,
			region:"center",
			columnWidth:1,
			title:"logo列表",
			height:240
		});
		
		grid.loadLogo("$!{id}");
		
		var grid2=Ext.create("com.zz91.ep.compImg.ListGrid",{
			id:IMG.BOOKLIST_GRID,
			region:"center",
			columnWidth:1,
			title:"证书列表",
			height:380
		});
		
		grid2.loadBook("$!{id}");
		
		Ext.create("Ext.container.Viewport",{
			layout:"border",
			items:[{
				region:"center",
				columnWidth:1,
				autoScroll:true,
				items:[form,grid,grid2]
			}]
		});
	});
</script>
