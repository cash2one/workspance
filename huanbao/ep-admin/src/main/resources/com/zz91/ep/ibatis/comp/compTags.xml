<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="compTags">
	<typeAlias alias="compTags" type="com.zz91.ep.domain.comp.CompTags" />
	<resultMap class="compTags" id="fullColumnMap">
		<result property="id" column="id" />
		<result property="parentId" column="parent_id" />
		<result property="code" column="code" />
		<result property="name" column="name" />
		<result property="keyword" column="keyword" />
		<result property="sort" column="sort" />
		<result property="showIndex" column="show_index" />
		<result property="gmtCreated" column="gmt_created" />
		<result property="gmtModified" column="gmt_modified" />
	</resultMap>
	
	<sql id="fullColumn">
		`id`,
		`parent_id`,
		`code`,
		`name`,
		`keyword`,
		`sort`,
		`show_index`,
		`gmt_created`,
		`gmt_modified`
	</sql>
	
	<insert id="insertCompTags" parameterClass="compTags">
		insert into `comp_tags`
		(
		`parent_id`,
		`code`,
		`name`,
		`keyword`,
		`sort`,
		`show_index`,
		`gmt_created`,
		`gmt_modified`)
		values
		(
		#parentId#,
		#code#,
		#name#,
		#keyword#,
		#sort#,
		#showIndex#,
		now(),
		now()
		)
		<selectKey keyProperty="id" resultClass="java.lang.Integer">
			select last_insert_id()
		</selectKey>
	</insert>
	
	
	<update id="updateCompTags" parameterClass="compTags">
		update `comp_tags`
		set
		`parent_id` = #parentId#,
		`code` = #code#,
		`name` = #name#,
		`keyword` = #keyword#,
		`sort` = #sort#,
		`show_index` = #showIndex#,
		`gmt_modified` = now()
		where id=#id#
	</update>
	
	<select id="queryComCategoryByParentId" parameterClass="java.lang.Integer" resultMap="fullColumnMap">
		select 
		<include refid="fullColumn"/>
		from comp_tags
		where parent_id=#value#
	</select>
	
		<delete id="deleteChildCategory" parameterClass="java.util.HashMap">
		delete from comp_tags
		<dynamic prepend="where">
			<isNotNull prepend="and" property="comtagsId">
				id=#comtagsId#
			</isNotNull>
			<isNotNull prepend="and" property="parentId">
				parent_id=#parentId#
			</isNotNull>
		</dynamic>
	</delete>
</sqlMap>