<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap
	PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
	"http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="param">

	<typeAlias alias="param" type="com.zz91.util.domain.Param" />
	<typeAlias alias="paramType" type="com.zz91.util.domain.ParamType"/>
	
	<resultMap class="param" id="paramResult">
		<result property="id" column="id" />
		<result property="types" column="types"/>
		<result property="name" column="name"/>
		<result property="key" column="key"/>
		<result property="value" column="value" />
		<result property="sort" column="sort"/>
		<result property="isuse" column="isuse" />
		<result property="gmtCreated" column="gmt_created" />
		<result property="gmtModified" column="gmt_modified" />
	</resultMap>
	
	<resultMap id="paramTypeResult" class="paramType">
		<result property="id" column="id" />
		<result property="key" column="key" />
  		<result property="name" column="name" />
  		<result property="gmtCreated" column="gmt_created" />
  		<result property="gmtModified" column="gmt_modified" />
	</resultMap>
	<sql id="paramFullColumn">
		p.`id`,
		p.`types`,
		p.`name`,
		p.`key`,
		p.`value`,
		p.`sort`,
		p.`isuse`,
		p.`gmt_created`,
		p.`gmt_modified`
	</sql>
	<sql id="paramTypeFullColumn">
		t.id,
		t.key,
		t.name,
		t.gmt_created,
		t.gmt_modified
	</sql>
	<select id="queryAllParam" resultMap="paramResult">
		select
			<include refid="param.paramFullColumn"/>
		from param p
		where isuse=1;
	</select>
	<!-- 
	<select id="queryValueByKey" resultClass="java.lang.String" parameterClass="java.lang.String">
		select p.value from param p where p.key=#recommendType#
	</select>
	
  	<select id="queryValueByTypeAndKey" resultClass="java.lang.String" parameterClass="java.util.Map">
	 	select name from param
	 	where types=#type# and `key`=#key#
  	</select>
	 -->
	
	<select id="queryParamByType"  resultMap="paramResult" parameterClass="java.lang.String">
		select
			<include refid="param.paramFullColumn"/>
		from param p
		where types=#value#;
	</select>
	<!-- list param by condition-->
	<select id="listParam" parameterClass="param" resultMap="paramResult">
	 	select 
	 	<include refid="param.paramFullColumn"/>
	 	from param p
	 	<dynamic prepend="where">
   			<isNotNull property="id" prepend="and" >
            	p.id = #id#
        	</isNotNull>
        	<isNotEmpty property="name" prepend="and">
            	p.name like concat(#name#,'%')
        	</isNotEmpty>
        	<isNotEmpty property="types" prepend="and">
            	p.types = #types#
        	</isNotEmpty>
        	<isNotEmpty property="key" prepend="and">
            	p.`key` = #key#
        	</isNotEmpty>
        	<isNotNull property="isuse" prepend="and">
            	p.isuse = #isuse#
        	</isNotNull>
        </dynamic>
  	</select>

  	<!-- insert one param -->
	<insert id="insertParam" parameterClass="param" >
		insert into param (name,types,`key`,value,sort,isuse,gmt_created,gmt_modified)
		values (#name#,#types#,#key#,#value#,#sort#,#isuse#,now(),now())
		<selectKey resultClass="java.lang.Integer" keyProperty="id" >
		  select last_insert_id()
		</selectKey>
	</insert>

	<!-- update param,id is need -->
	<update id="updateParam" parameterClass="param" >
		update param
	    	set name=#name#,
	    	`key`=#key#,
	    	value = #value#,
	    	sort = #sort#,
	    	isuse = #isuse#,
	    	gmt_modified=now()
	    where id = #id#
	</update>

	<!-- delete one param by id -->
	<delete id="deleteParamById" parameterClass="java.lang.Integer" >
		    delete from param where id = #value#
	</delete>

	<!-- delete one param by param type -->
	<delete id="deleteParamByTypes" parameterClass="java.lang.String" >
		    delete from param where types = #value#
	</delete>

  	<!-- list alll paramType -->
  	<select id="listAllParamType" resultMap="paramTypeResult">
	 	select 
		<include refid="param.paramTypeFullColumn"/>
	 	from param_type t
  	</select>

  	<select id="listOneParamTypeByKey" resultMap="paramTypeResult" parameterClass="java.lang.String">
	 	select 
	 	<include refid="param.paramTypeFullColumn"/>
	 	 from param_type t
	 	where `key`=#value#
  	</select>
  	
  	<select id="listOneParamById" resultMap="paramResult" parameterClass="java.lang.Integer">
	 	select 
	 	<include refid="param.paramFullColumn"/>
	 	from param p
	 	where p.id = #value#
  	</select>
  	
  	<select id="queryNameByTypeAndValue" resultClass="java.lang.String" parameterClass="java.util.Map">
  	select name from param
  	where types=#type# and value=#value#
  	</select>

  	<!-- create param type -->
  	<insert id="createParamType" parameterClass="paramType" >
  		insert into param_type(`key`,name,gmt_created,gmt_modified)
  			values(#key#,#name#,now(),now())
  	</insert>

  	<update id="updateParamType" parameterClass="paramType">
  		update param_type set
  			name=#name#,
  			gmt_modified=now()
  		where `key`=#key#
  	</update>

  	<delete id="deleteParamType" parameterClass="java.lang.String" >
  		delete from param_type
  			where `key`=#value#
	</delete>
</sqlMap>
